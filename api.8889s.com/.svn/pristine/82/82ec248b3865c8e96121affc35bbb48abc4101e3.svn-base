$(function() {
	$('#qian_dao').click(function() {
		
		//$(this).attr('disabled');
		
		if (confirm('确定要恢复今日签到吗？切记每日最多操作一次')) {
			$.ajax({
				type: "post",
				url: "{:Url('Zhudan/qianhuifu')}",
				data:{'ajax':1},
				success:function(data) {
					if (data == 'ok') {
						alert('成功');
					} else if (data == 'again') {
						alert('今天已经恢复过了， 不能重复操作');
					} else {
						alert('失败');
					}
				},
				error:function() {
					alert('失败');
				}
			});
		}
	});
})
