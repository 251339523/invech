<script language="javascript">
function check_submit(){
	if($("#pay_value").val()==""){
		 alert("请输入您的提款金额");
		 $("#pay_value").focus();
		 return false;
	 }
	if($("#qk_pwd").val()==""){
		 alert("请输入您注册时设置的取款密码");
		 $("#qk_pwd").focus();
	 	 return false;
 	 }
 	if($("#pay_value").val()<100){
		 alert("每次最低提款金额为100");
		 $("#pay_value").focus();
		 return false;
	}
}
setInterval(function() {
	$.ajax({
		type: "post",
		url: "{:Url('index/home')}",
		data:{'ajax':1,'get_money':'1'},
		success:function(data) {
			if (/^[\d\.]+$/.test(data)) {
				$('#money,#money_2').text(data);
			}
		}
	});
},2000);
</script>
