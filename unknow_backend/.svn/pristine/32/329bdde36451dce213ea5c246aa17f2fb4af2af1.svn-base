// 提交转换
function SubInfo(){
		$("#SubTran").prop("disabled", true);
        var hk=$('#zz_money').val();
        var fs = $("#zz_type").val();
		if(fs == 14 || fs == 24){
			alert('维护中');
			$("#SubTran").prop("disabled", false);
			return false;
		}
		if(fs == '' || fs == null){
            alert('请选择转帐方式！');
			$("#SubTran").prop("disabled", false);
            return false;
        }
        if(hk==''){
            alert('请输入转账金额');
            $('.liAdd_bg input').focus();
			$("#SubTran").prop("disabled", false);
            return false;
        }else{
            hk = hk*1;
            if(hk<1){
				alert('转账金额最低为:1元');
                $('.liAdd_bg input').focus();
				$("#SubTran").prop("disabled", false);
                return false;
            }
        }
        $("#SubTran").val("转账提交中..");
        $('#form1').submit();
    }

