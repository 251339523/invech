    <style type="text/css">
	.toggleBtn{
		border:none;
		width:48px;
		height:24px;
		background:none;
		font-size:14px;
		line-height:24px;
		font-family:'微软雅黑';
		padding:0px;
		margin:0px;
		outline:0px;
	}
	.runBtn{
		margin-left:30px;
	}
	.closeBtn{
		margin-left:10px;
	}
	
	.toggleBtn:focus{
		outline: 0;
	}
	input[type='button'].normal{
		color:#666666;
		background:url(/images/radio_normal.png) top left no-repeat;
	}
	input[type='button'].run{
		color:#f2f2f2;
		background:url(/images/radio_on.png) top left no-repeat;
	}
	input[type='button'].closed{
		color:#f2f2f2;
		background:url(/images/radio_close.png) top left no-repeat;
	}

	</style>
    <script type="text/javascript">
	$(function(){
		$(".toggleRadio").each(function(){
			$(this).hide();
			if($(this).attr("checked") != 'checked'){
				$isrun = false;
			}else{
				$isrun = true;
			}
			if($(this).val() == 1 ){
				$runflag = $isrun ? 'runBtn normal' : 'runBtn run';
				$val = '是';
			}else{
				$runflag = $isrun ? 'closeBtn normal' : 'closeBtn closed' ;
				$val = '否';
			}
			
			var html = "<input type='button' class='toggleBtn "+$runflag+" ' value='"+$val+"' />";
			$(this).parent().prepend(html);
		})
		$(".runBtn").click(function(){
			$close = $(this).parent().find('.closeBtn');
			$radio = $(this).parent().find('input[value=0]');
			if($(this).hasClass('normal')){
				$(this).addClass('run');
				$(this).removeClass('normal');
				$close.addClass('normal');
				$close.removeClass('closed');
				$radio.click();
				
			}
		})
		$(".closeBtn").click(function(){
			$run = $(this).parent().find('.runBtn');
			$radio = $(this).parent().find('input[value=1]');
			if($(this).hasClass('normal')){
				$(this).addClass('closed');
				$(this).removeClass('normal');
				$run.addClass('normal');
				$run.removeClass('run');
				$radio.click();
			}
		})
	})
	</script>
</body>
