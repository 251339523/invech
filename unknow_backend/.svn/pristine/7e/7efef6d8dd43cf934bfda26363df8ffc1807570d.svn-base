function check_submit(){
	if($("#qishu").val()==""){
		alert("请填写开奖期数");
		$("#qishu").focus();
		return false;
	}
	if($("#datetime").val()==""){
		alert("请填写开奖时间");
		$("#datetime").focus();
		return false;
	}
	if($("#ball_1").val()==""){
		alert("请选择第一球开奖号码");
		$("#ball_1").focus();
		return false;
	}
	if($("#ball_2").val()==""){
		alert("请选择第二球开奖号码");
		$("#ball_2").focus();
		return false;
	}
	if($("#ball_3").val()==""){
		alert("请选择第三球开奖号码");
		$("#ball_3").focus();
		return false;
	}
	if($("#ball_4").val()==""){
		alert("请选择第四球开奖号码");
		$("#ball_4").focus();
		return false;
	}
	if($("#ball_5").val()==""){
		alert("请选择第五球开奖号码");
		$("#ball_5").focus();
		return false;
	}
	return true;
}

$(function() {
	$('#all_checkbox').click(function() {
		if ($(this).is(':checked')) {
			$('.checkbox').prop("checked",true);
		} else {
			$('.checkbox').prop("checked",false);
		}
	});
		
	$('#checkbox_button').click(function() {
		var is_submit = false;
		if ($('#checkbox_select').val() == 'yes') {
			$('#set_my_ok').val('1');
			is_submit = true;
		} else if ($('#checkbox_select').val() == 'no') {
			$('#set_my_ok').val('0');
			is_submit = true;
		} else {
			alert('请先选择');
			return false;
		}
		
		if (is_submit) {
			var arr = [];
			$('.checkbox').each(function() {
				if ($(this).is(':checked')) {
					var tempid = $(this).attr('id');
					var temp_patten = tempid.match(/checkbox_(\d+)/);
					if (temp_patten && temp_patten[1]) {
						arr.push(temp_patten[1]);
					}
				}
			});
			
			$('#set_my_ids').val(arr.join('.'));
			$('#set_my_auto').submit();
		}
	});
	
})
</script>
