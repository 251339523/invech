{extend name="public/user_head"/}
{block name="body"}
<header class="header">
    <i class='left' onclick="javascript:history.back(-1);">返回</i>
    <h1>返水记录</h1>
</header>

<main class="inner_body">
    <section class="fund_detail">
         <ul class="condition">
             <li>
                <p _long="3">最近三天</p>
                <p _long="7">最近七天</p>
                <p _long="30">最近一月</p>
            </li>
            <li><span>返水时间：</span><input type="date" value="" id="_date"/></li>
        </ul>
    </section>
    <section class="table">
        <div id="pullrefresh" class="mui-content mui-scroll-wrapper">
            <div class="mui-scroll">
                <table>
                     <thead>
                        <tr>
                            <th>返水时间</th>
                            <th>返水金额</th>
                            <th>返水类型</th>
                         </tr>
                    </thead>
                    <tbody id="lists">
                        {if(!$list['list']->isEmpty())}
                            {foreach $list['list'] as $v}
                                <tr>
                                    <td>{$v->created_at}</td>
                                    <td>{$v->amount}</td>
                                    <td> {eq name="$v->type" value="recharge"}充值{/eq}</td>
                                </tr>
                            {/foreach}
                        {else}
                            <tr><td colspan="3" styl="text-align:center;">暂无数据</td></tr>
                        {/if}
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" id="startTime" value=""/>
        <input type="hidden" id="endTime" value=""/>
    </section>
</main>
<script type="text/javascript">
    var base_url = '/user/backwater_record';
    var page = 1;
    $(function () {
        // 设置容器高度
         $('section.table').height($('main').height()-$('ul.condition').height() - $('section.table table tr td').height());
         // 设置默认日期
        //$('#_date').val(formatDate(new Date()).split(' ')[0]);
    });
    // 搜寻日期
    $('#_date').change(function(){
        var stime = $("#_date").val();
        var endTime = stime + " 23:59:59";
            stime = stime+" 00:00:00";
        $('#startTime').val(stime);
        $('#endTime').val(endTime);
        var _url = base_url + '?startTime='+stime+'&endTime='+endTime;
        page = 1;
       loadMore(_url);
    });
       // 快捷日期
    $('.condition li:first-child p').click(function () {
        var _this = $(this);
        var _startTime = setQuickDate(_this);
        var _endTime = formatDate(new Date());
        $('#startTime').val(_startTime);
        $('#endTime').val(_endTime);
        var _url = base_url + '?startTime='+_startTime+'&endTime='+_endTime;
        page = 1;
        loadMore(_url);
    });
</script>
{/block}