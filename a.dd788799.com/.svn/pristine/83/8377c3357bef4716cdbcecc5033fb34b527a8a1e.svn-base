{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      	<div class="box-header">
			<form>
			   	<div class="pull-left">
	               <input type="text" name="starttime"  value="{$Think.get.starttime}" placeholder="开始时间" class="form-control input-sm" id="datepicker1">
	            </div>		     
		       	<div class="pull-left" style="margin-left:15px;">
	                <input type="text" name="endtime"  value="{$Think.get.endtime}" placeholder="结束时间" class="form-control input-sm" id="datepicker2">
	           	</div>  
	           	<div class="pull-left" style="margin-left:15px;">
	              	<select class="form-control input-sm" name="business" aria-hidden="true">
	             	   <option value="" >全部提案</option>
	             	   <option value="agent" {if($Think.get.business=="agent")} selected="selected" {/if}>代理提案</option>
	             	   <option value="withdraw" {if($Think.get.business=="withdraw")} selected="selected" {/if}>提现提案</option>
	             	</select>
	         	</div>
	          	<div class="pull-left" style="margin-left:15px;">
	              	<select class="form-control input-sm" name="status" aria-hidden="true">
	             	   <option value="" >全部状态</option>
	             	   <option value="0" {if($Think.get.status=="0")} selected="selected" {/if}>未审核</option>
	             	   <option value="1" {if($Think.get.status=="1")} selected="selected" {/if}>同意</option>
	             	   <option value="-1" {if($Think.get.status=="-1")} selected="selected" {/if}>拒绝</option>
	               	</select>
	         	</div>
				<div class="has-feedback pull-left" style="margin-left:15px;">
		        	<button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
		      	</div>
			</form>
		 </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
         	<tr>
				<th>#</th>
				<th>用户Id</th>
				<th>用户名</th>
				<th>提案类型</th>
				<th>申请时间</th>
				<th>审核人员</th>
				<th>审核状态</th>
				<th>备注</th>
				<th>审核时间</th>
				<th>操作</th>
			</tr>
			{foreach $list as $v}
			<tr>
				<td>{$v->id}</td>
				<td>{$v->uid}</td>
				<td>{if(!empty($v->user->username))}{$v->user->username}{/if}</td>
				<td>{eq name="$v->business" value="agent"}代理提案{/eq}
					{eq name="$v->business" value="withdraw"}提现提案{/eq}
				</td>
				<td>{$v->created_at}</td>
				<td>{if(!empty($v->admin->username))}{$v->admin->username}{/if}</td>
				<td>
					{eq name="$v->status" value="0"}未审核{/eq}
					{eq name="$v->status" value="1"}同意{/eq}
					{eq name="$v->status" value="-1"}拒绝{/eq}
				</td>
				<td>{$v->remark}</td>
				<td>{$v->audit_at}</td>
				<td>
					{eq name="$v->status" value="0"}<i  data-id="{$v.id}" class="edit fa fa-pencil"></i>&nbsp;&nbsp;{/eq}
				</td>
			</tr>
			{/foreach}
        </table>
        {$list->render();}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){
	var obj = {
        autoclose: true,
        todayHighlight: true,
        language:"zh-CN", 
        format:"yyyy-mm-dd" 
    };
	$("#datepicker1").datepicker(obj)
	$("#datepicker2").datepicker(obj);
	$(".edit").click(function(){
		var id = $(this).attr('data-id');
		$.get('/apply/detail.html',{id:id},function(data){
			layer.open({
				type: 1,
				title: '提案详情',
				maxmin: false, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});
});

</script>
