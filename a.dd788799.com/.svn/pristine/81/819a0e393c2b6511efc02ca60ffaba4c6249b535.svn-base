{layout name="layout" /}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
		

		<form>
		      <div class="has-feedback pull-right">
		        <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
		      </div>
				
		      <div class="pull-right" style="margin-left:15px;">
		      	<input class="form-control input-sm search" value="{$Think.get.keywords}"  name="username" id="usename"  placeholder="用户名" type="text"  style="width: 250px;">
		      </div> 
		      
                <div class="pull-right">
	              
	                <span class="btn btn-danger btn-sm filter">银行</span>
	             	<select class="form-control input-sm" name="bankId" aria-hidden="true">
	             	   <option value="0" >全部</option>
                   	  <option value="1" {if($Think.get.type=='1')} selected="selected"{/if}>会员</option>
		              <option value="2" {if($Think.get.type=='2')} selected="selected"{/if}>代理</option>
		         	</select>
             	 </div>
		 </form>

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
         	<tr>
				  <th>#</th>
				  <th>用户名</th>
				  <th>银行名称</th>
				  <th>银行卡号</th>
				  <th>操作</th>
				</tr>
				{foreach $list as $v}
				 <tr>
					<td>{$v.id}</td>
					<td>{$v.username}</td>
					<td>{$v.bankName}</td>
					<td>{$v.account}</font></td>
					<td >
						<i  data-id="{$v.id}" class="edit fa fa-pencil"></i>&nbsp;&nbsp;
						<i  data-id="{$v.id}" class="del fa fa-trash"></i>
              		</td>
				</tr>
				{/foreach}
        </table>
        {$list->render();}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){

	$(".edit").click(function(){
		var id = $(this).attr('data-id');
		$.get('/member/member_bank_form.html',{id:id},function(data){
			layer.open({
				type: 1,
				title: '修改会员',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});
	$(".del").click(function(){
		var id = $(this).attr('data-id');
		layer.confirm('确定删除?', {
		  btn: ['确定','取消'] //按钮
		}, function(){
			$.get('/member/member_bank_del',{id:id},function(data){
				layer.alert(data.msg, {
		          time: 20000,
		          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
		          closeBtn: 0,
		          anim: 4
		        }, function(){
		           window.location.href = document.URL;
		        } )

			},'json');
		}, function(){
		
		});
	});
});

</script>
