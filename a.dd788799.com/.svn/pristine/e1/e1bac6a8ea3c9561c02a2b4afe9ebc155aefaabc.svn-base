        <script type="text/html" id="fc3d_hs">
            <table width="100%" border="1">
                <thead>
                <tr>
                    <th colspan="15">{{plg[0].name}}</th>
                </tr>
                <tr>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                </tr>
                </thead>

                <tbody>
                {{each plg[0].lines line index1}}
                <tr>
                    {{each line pl index2}}
                    <td style="cursor: pointer;" onclick="setQuickPick(this)"><strong>{{pl.value}}</strong></td>
                    <td style="cursor: pointer;" onclick="setQuickPick(this)"><strong
                            class="color-red pl">{{pl.pl}}</strong></td>
                    <td><input type="text" class="table-txt" data-name="{{plg[0].name}}-{{pl.value}}"
                               data-plid="{{pl.id}}"
                               data-pl="{{pl.pl}}"></td>
                    {{/each}}
                </tr>
                {{/each}}

                </tbody>
            </table>
            <br/>
            <br/>
            <table width="100%" border="1">
                <thead>
                <tr>
                    <th colspan="15">{{plg[1].name}}</th>
                </tr>
                <tr>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                    <th width="47">号码</th>
                    <th width="56">赔率</th>
                    <th>金额</th>
                </tr>
                </thead>

                <tbody>
                {{each plg[1].lines line index1}}
                <tr>
                    {{each line pl index2}}
                    <td style="cursor: pointer;" onclick="setQuickPick(this)"><strong>{{pl.value}}</strong></td>
                    <td style="cursor: pointer;" onclick="setQuickPick(this)"><strong
                            class="color-red pl">{{pl.pl}}</strong></td>
                    <td><input type="text" class="table-txt" data-name="{{plg[1].name}}-{{pl.value}}"
                               data-plid="{{pl.id}}"
                               data-pl="{{pl.pl}}"></td>
                    {{/each}}
                </tr>
                {{/each}}
                </tbody>
            </table>
            <br/>
        </script>
    </div>
</div>
<script>
    //var pls;//玩法的所有赔率
    //var plg;//当前赔率组

    function changeTab(self) {
        $(self).siblings().removeClass('active');
        $(self).addClass('active');
        var $tabs = $(self).parent().children();

        var index = $tabs.index(self);
        var index0 = 2 * index;
        var index1 = 2 * index + 1;
        var plg = [];
        plg[0] = pls[index0];
        plg[1] = pls[index1];

        var len = $('.pp').data('line');
        plg[0].lines = group(plg[0].pls, len);
        plg[1].lines = group(plg[1].pls, len);

        var html = template("fc3d_hs", {plg: plg});
        $('.table-common').html(html);

        $('.pp :checkbox').live('click', gameMsgAutoTip);
    }

    $(function () {
        //循环表格放到table-common
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            $('.T-tab.clearfix').children().eq(0).click();
        });
    });
</script>
