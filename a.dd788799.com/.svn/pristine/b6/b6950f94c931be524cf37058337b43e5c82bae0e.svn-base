*{
    margin:0;
    padding:0;
}
input,select {
    margin-bottom: 0px!important;
    font-size:12px!important;
}
ul,ol{
    list-style:none;
}
a{
    text-decoration: none;
}
body{
    font-family:'微软雅黑';
    background: #F9F9F9;
}
.container{
    background: #F9F9F9;
    width: 100%;
    height: 100%;
    display: none;
}
/** header **/
header{
    width: 100%;
    height:.88rem;
    background:#FC503A;
    position:fixed;
    z-index: 2;
}
header h1{
    font-size: .36rem;
    color:#FFFFFF;
    text-align:center;
    line-height:.88rem;
}
header i{
    width:.88rem;
    height:.88rem;
    font-size:.28rem;
    line-height:.88rem;
    text-align:center;
    color:#ffffff;
    font-style:normal;
    position:absolute;
}
header i.right{
    right:0;
}
header i.right.wider{
    right:0;
    top:0;
    width: .88rem;
}
header i.left{
    left:0;
}
/****
*****	container
*****/
main{
    width:100%;
    position: absolute;
    top:.88rem;
    overflow: auto;
}
main section{
    overflow: hidden;
    font-size:.28rem;
    background: #ffffff;
}


/*** footer **/
/*** footer **/
.g-footer {
    margin-top: 5px;
    border-top: 1px solid #ededed;
    background-color: #fff;
    color: #999;
    font-size: 12px;
    line-height: 24px;
    text-align: center;
    _zoom: 1;
    position: fixed;
    width: 100%;
    bottom: 0;
    z-index: 2;
}

.g-footer .g-wrap {
    padding: 10px 0;
}

.g-main {
    float: left;
}

.g-side {
    float: right;
}

.g-wrap {
    margin: 0 auto;
    width: 320px;
    position: relative;
}

@media only screen and (max-width :640px) {
    .g-wrap {
        width: 100%;
    }
}

@media only screen and (min-width :641px) {
    .g-wrap {
        width: 640px;
    }
}

.g-footer .g-wrap{
    padding: 0;
}
.m-state{
    width: 96%;
    box-sizing: border-box;
    margin-left:2%;
    padding:0;
}
.m-state li{
    width: 20%;
    box-sizing: border-box;
    height: 44px;
    text-align: center;
    margin-right: 0;
    padding: 0;
    float: left;
    line-height: 15px;
}
.m-state li a{
    color:#999;
}
.m-state li.active a{
    color:#ff4200;
}
.m-state li img{
    display: block;
    width:35%;
    margin: 3px auto;
    margin-bottom:1px;
}
/*** content **/
section.banner{
    width: 100%;
    height: 2.89rem;
    border-bottom:1px solid #ececec;
}
section.banner .swiper-container{
   /* width:6.82rem;
    height: 2.58rem;
    margin-top:.1rem;*/
    width: 100%;
    height: 2.68rem;
    overflow: visible;
}
section.banner .swiper-container img{
    width: 100%;
    height: 100%;
}

.swiper-container-horizontal>.swiper-pagination-bullets, .swiper-pagination-custom, .swiper-pagination-fraction{
    bottom:-.19rem;
}
.swiper-pagination-bullet{
    width: .22rem;
    height: .03rem;
}
section.lotteries{
    width:100%;
    height: 4rem;
}

.swiper-container1 ul li{
    display: inline-block;
    box-sizing: border-box;
    width: 25%;
    height: 2rem;
    text-align: center;
}
.swiper-container1 ul li div{
    width:.86rem;
    height: .86rem;
    margin:.25rem auto;
}
.swiper-container1 ul li div img{
    width: 100%;
    height: 100%;
}
.swiper-container1 ul li span{
    display: block;
    width: 100%;
    box-sizing: border-box;
    font-size: .26rem;
    color:#333;
    text-align: center;
}