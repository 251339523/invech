<?php

namespace app\index\controller;

use app\index\Base;
use think\Db;

class Sms extends Base
{   
    
    public function token(){
        if(IS_GET&&IS_AJAX){
            $token = container('sms')->token();
            $this->success('','',$token);
        }
    }

    public function news($id){
        $this->assign('info', Db::name('news')->find($id));
        return $this->fetch();
    }

}
