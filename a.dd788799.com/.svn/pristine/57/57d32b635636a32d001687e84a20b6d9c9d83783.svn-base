{extend name="public/user_head"/}
{block name="body"}
<style type="text/css">
    #_date{
        width:.6rem;
        height: .88rem;
        position:absolute;
        right:.4rem;
        top:0;
        opacity: 0;
    }
    ul.condition{
        font-size:.12rem;
        text-align: center;
    }
    ul.condition li span{
        font-weight: bold;
    }
    ul.condition li select{
        float: none;
        width: 65%;
    }
    ul.condition li select.left{
        float: none;
    }
    ul.condition li{
        width: 33%;

    }
    ul.condition li:last-child span{
        margin-left:0;
    }
</style>
<header class="header">
    <i class='left' onclick="javascript:history.back(-1);">返回</i>
    <h1>投注记录</h1>
     <i class="right wider">日期检索</i>
    <input type="date" id="_date"/>
</header>
<main class="inner_body">
    <section class="fund_detail">
        <ul class="condition">
            <li>
                <span>彩种：</span>
                <select id="_type" class="left">
                    {foreach $type as $v}
                        <option value="{$v.id}">{$v.title}</option>
                    {/foreach}
                </select>
            </li>
            <li>
                <span>组别：</span>
                <select id="_type_group" class="left">

                </select>
            </li>
            <li>
                <span>玩法：</span>
                <select id="_type_method" class="left">
                    <option>所有玩法</option>
                    <option value="0">xx</option>
                    <option value="1">xxx</option>
                    <option value="2">xxx</option>
                    <option value="3">xxx</option>
                </select>

            </li>
        </ul>
    </section>
    <section class="table">
        <div id="pullrefresh" class="mui-content mui-scroll-wrapper">
            <div class="mui-scroll">
                <table>
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th>彩种</th>
                            <th>玩法</th>
                            <th>投注金额</th>
                            <th>盈亏</th>
                       </tr>
                    </thead>
                    <tbody id="lists">
                        {if(!$list['list']->isEmpty())}
                            {foreach $list['list'] as $v}
                                <tr>
                                    <td>{$v->created_at}</td>
                                    <td>{$v->types->title}</td>
                                    <td>{$v->played->name}</td>
                                    <td>{$v->actionNum*$v->mode*$v->beiShu}</td>
                                    {if(!empty($v->lotteryNo))}
                                       {if($v->cha>0)}
                                            <td><span style="color:red">{$v->cha}</span></td> 
                                        {else}
                                            <td><span style="color:green">{$v->cha}</span></td>
                                        {/if}
                                    {else}
                                       <td><span style="color:green">未开奖</span></td>
                                    {/if}
                                   
                                </tr>
                            {/foreach}
                        {else}
                            <tr><td colspan="5" styl="text-align:center;">暂无数据</td></tr>
                        {/if}
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" id="startTime" value=""/>
        <input type="hidden" id="endTime" value=""/>
    </section>
</main>
<script type="text/javascript">
    var base_url = '/user/bet_record';
    $(function () {
        // 设置容器高度
         $('section.table').height($('main').height()-$('ul.condition').height() - $('section.table table tr td').height());
         // 设置默认日期
        //$('#_date').val(formatDate(new Date()).split(' ')[0]);
        $("#_type").trigger('change');
    });
    // 彩种
    $("#_type").change(function(){
        var typeId = $(this).val();
        mui.ajax('/user/getGroupByid?typeId='+typeId,{
            dataType:'json',
            type:'POST',
            timeout:10000,
            headers:{'Content-Type':'application/json'},                  
            success:function(data){
                console.log('type changed');
                var _ops = "";
                $.each(data.data,function(key,val){
                    _ops += "<option value='"+val.id+"'>"+val.groupName+"</option>";
                });
                $('#_type_group').text('');
                $('#_type_group').append(_ops);
                $("#_type_group").trigger('change');
            },
            error:function (error) {
                console.log(error);
                alert('ajax error');
            }
        });
    });
    // 组别
    $("#_type_group").change(function(){
        console.log('group changed');
        var groupId = $(this).val();
        mui.ajax('/user/getPlayedByid?groupId='+groupId,{
            dataType:'json',
            type:'POST',
            timeout:10000,
            headers:{'Content-Type':'application/json'},                  
            success:function(data){
                var _ops = "";
                $.each(data.data,function(key,val){
                    _ops += "<option value='"+val.id+"'>"+val.groupName+"</option>";
                });
              /*  $('#_type_group').text('');
                $('#_type_group').append(_ops);
                $("#_type_method").trigger('change');*/
                console.log(data);
            },
        });
    });
    // 玩法
    $("#_type_method").change(function(){
        var groupId = $(this).val();
        //loadMore()
    });

    mui.init({
        pullRefresh: {
            container: '#pullrefresh',
            up: {
                contentrefresh: '正在加载...',
                contentnomore:'没有更多数据了',
                callback: pullupRefresh
            }
        }
    });
    var page = 1;
    /**
     * 上拉加载具体业务实现
     */
    function pullupRefresh() {
        page++;
        var stime   = $('#startTime').val();
        var endTime = $("#endTime").val();
        var _url = base_url + '?page='+page+'&startTime='+stime+'&endTime='+endTime;
        loadMore(_url)
   }
    // 搜寻日期
    $('#_date').change(function(){
        var stime = $("#_date").val();
        var endTime = stime + " 23:59:59";
            stime = stime+" 00:00:00";
        $('#startTime').val(stime);
        $('#endTime').val(endTime);
        var _url = base_url + '?startTime='+stime+'&endTime='+endTime;
        page = 1;
       loadMore(_url);
    });
    // 加载数据
    function loadMore(_url){
        mui.ajax(_url,{
            dataType:'json',
            type:'POST',
            timeout:10000,
            headers:{'Content-Type':'application/json'},
            success:function(data){
                var html = data.data;
                var len  = (html.split("tr").length-1)/2;
                if(page>1){ // 下拉
                    $('#lists').append(html);
                }else{      // 点击
                    $('#lists').html(html);
                    mui('#pullrefresh').pullRefresh().refresh(true);
                    if(len == 0){
                        $('#lists').html('<tr><td colspan="5" style="text-align:center;">暂无数据</td></tr>');
                        mui('#pullrefresh').pullRefresh().disablePullupToRefresh();
                    }
                }
                if(len<15){
                    mui('#pullrefresh').pullRefresh().endPullupToRefresh(true);
                }else{
                    mui('#pullrefresh').pullRefresh().endPullupToRefresh(false);
                }
            },
            error:function (error) {
                console.log(error);
                alert('ajax error');
            }
        });
    }
</script>
{/block}