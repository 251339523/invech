{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <i class="fa fa-plus-square pull-right add_data"></i>
        <form>
            <div class="pull-left" >
                <select class="form-control input-sm" name="type" aria-hidden="true">
                  <option value="" >全部类别</option>
                    {foreach($types as $key=>$type)}
                      <option value="{$key}" {if($Think.get.type == $key)}selected{/if} >{$type.title}</option>
                    {/foreach}
                </select>
            </div>
            <div class="has-feedback pull-left" style="margin-left:15px;">
              <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
            </div>
        </form>
    

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
              <th>#</th>
              <th >彩种</th>
              <th >开奖时间</th>            
              <th >开奖期号</th>
              <th >开奖结果</th>
              <th >操作</th>
          </tr>
          {foreach $list as $item}
           <tr>
              <td>{$item->id}</td>
              <td>{$item->lottery->title}</td>
              <td>{$item->time|date='Y-m-d H:i:s',###}</td>
              <td>{$item->number}</td>
              <td>{$item->data}</td>
               <td >
                  <i  data-id="{$item->id}" class="edit fa fa-pencil"></i>
              </td>
          </tr>
          {/foreach}
        </table>
        {$list->render()}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){
  $(".add_data").click(function(){
    
    $.get('/lottery/data_edithtml',{},function(data){
      layer.open({
        type: 1,
        title: '新增开奖时间',
        maxmin: true, //开启最大化最小化按钮
        area: ['900px', '600px'],
        content: data
      });
    },'html');
  });
  
  $(".edit").click(function(){
    var id = $(this).attr('data-id');

    $.get('/lottery/data_edit.html',{id:id},function(data){
      layer.open({
        type: 1,
        title: '修改开奖时间',
        maxmin: true, //开启最大化最小化按钮
        area: ['900px', '600px'],
        content: data
      });
    },'html');
  });

});

</script>
