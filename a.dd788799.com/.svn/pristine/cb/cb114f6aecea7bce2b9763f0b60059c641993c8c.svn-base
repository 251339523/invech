<link rel="stylesheet" type="text/css" href="/__CSS__/user/reset.css?v=20170715">
<link rel="stylesheet" type="text/css" href="/__CSS__/user/hpn-common.css">
<link rel="stylesheet" type="text/css" href="/__CSS__/user/index.css?v=20171117">
<link rel="stylesheet" type="text/css" href="/__CSS__/user/global.css">
<link rel="stylesheet" type="text/css" href="/__CSS__/user/info.css">
<link rel="stylesheet" href="/__JS__/datepicker/datepicker3.css">
<script src="/__JS__/jquery.min.js"></script>
<script src="/__JS__/datepicker/bootstrap-datepicker.js"></script>
<script src="/__JS__/datepicker/bootstrap-datepicker.zh-CN.js"></script>
<div class="help_r_main">
    <div class="eveb_content">
        <div class="eveb_nav_sub">
            <ul class="clearfix">
                <li ><a href="/user/recharge_record">充值记录</a></li>
                <li ><a href="/user/withdraw_record">提现记录</a></li>
                <li><a href="/user/money_record">资金流水</a></li>
                <li class="on"><a href="/user/bet_record">投注记录</a></li>
                <li><a href="/user/backwater_record">返水记录</a></li>
            </ul>
        </div>
        <h2>
            <div class="eveb_search eveb_search_h2">
                <form>
                    <label style="margin-left:10px">彩种：</label>
                    <select  name="type">
                        <option value="">全部彩种</option>
                        {foreach $type as $v}
                            <option value="{$v.id}" {if($Think.get.type == $v.id)} selected {/if} >{$v.title}</option>
                        {/foreach}
                    </select>
                    <label style="margin-left:10px">起止时间：</label>
                    <input name="starttime" id="datepicker1"   value="{$Think.get.starttime}" placeholder="开始时间" type="text"> -
                    <input name="endtime"   id="datepicker2"   value="{$Think.get.endtime}" placeholder="结束时间" type="text">
                    <input type="submit" class="button_small button_1" value="筛选">
                </form>
            </div>
        </h2>
        <table class="eveb_box eveb_table" id="dataTable">
            <thead>
                <tr>
                    <th>期号</th>
                    <th>注单号</th>
                    <th>时间</th>
                    <th>彩种</th>
                    <th>玩法</th>
                    <th>赔率</th>
                    <th>返点</th>
                    <th>内容</th>
                    <th>注数</th>
                    <th>金额</th>
                    <th>倍数</th>
                    <th>中奖金额</th>
                    <th>中奖注数</th>
                    <th>盈亏</th>
                </tr>
            </thead>
            <tbody>
                {if(!$list['list']->isEmpty())}
                    {foreach $list['list'] as $v}
                        <tr>
                            <td>{$v->actionNo}</td>
                            <td>{$v->orderId}</td>
                            <td>{$v->created_at}</td>
                            <td>{$v->types->title}</td>
                            <td>
                                {eq name="$v->played->is_kqwf" value="0"}官方玩法-- {$v->played->name}{/eq}
                                {eq name="$v->played->is_kqwf" value="1"}快钱玩法-- {$v->played->name}{/eq}
                            </td>
                            <td>{$v->bonusProp}</td>
                            <td>{$v->fanDian}</td>
                            <td>{$v->actionData}</td>
                            <td>{$v->actionNum}</td>
                            <td>{$v->mode}</td>
                            <td>{$v->beiShu}</td>
                            {if(!empty($v->lotteryNo))}
                                <td>{$v->bonus}</td>
                                <td>{$v->zjCount}</td>
                                {if($v->cha>0)}
                                    <td><span style="color:red">{$v->cha}</span></td> 
                                {else}
                                    <td><span style="color:green">{$v->cha}</span></td>
                                {/if}
                            {else}
                                <td><span style="color:green">未开奖</span></td>
                                <td><span style="color:green">未开奖</span></td>
                                <td><span style="color:green">未开奖</span></td>
                            {/if}
                        </tr>
                    {/foreach}
                {else}
                    <tr><td colspan="14" styl="text-align:center;">暂无数据</td></tr>
                {/if}
            </tbody>
         </table>
        <div class="eveb_amount fl">
            当前投注<span id="pageMoney">{$list['Pagetz']}</span>元，
            总投注<span id="totalMoney">{$list['tz']}</span>元，
            当前盈亏<span id="pageWinOrLoseMoney">{$list['Pagecha']}</span>元，
            总盈亏<span id="totalWinOrLoseMoney">{$list['cha']}</span>元
        </div>
        <div class="eveb_page fr"> {$list['list']->render();}</div>
    </div>
</div>
<script type="text/javascript">
$(function(){
        var obj = {
                autoclose: true,
                todayHighlight: true,
                language:"zh-CN", 
                format:"yyyy-mm-dd" 
           };
    $("#datepicker1").datepicker(obj)
    $("#datepicker2").datepicker(obj);
});

</script>
