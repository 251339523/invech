<form class="form-horizontal" id="config_add" method="post" enctype="multipart/form-data">
  <div class="box-body">

    <div class="form-group">
        <input type="hidden" id="soft-id" value="0">
        <label for="inputEmail3" class="col-sm-2 control-label">名称</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" placeholder="名称" {if(isset($info['name']))} value="{$info['name']}" {/if}>
        </div>
      </div>

      <div class="form-group">
        <input type="hidden" id="soft-id" value="0">
        <label for="inputEmail3" class="col-sm-2 control-label">标题</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" placeholder="标题" {if(isset($info['title']))} value="{$info['title']}" {/if}>
        </div>
      </div>

       <div class="form-group">
        <input type="hidden" id="soft-id" value="0">
        <label for="inputEmail3" class="col-sm-2 control-label">值</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="value" name="value" placeholder="值" {if(isset($info['value']))} value="{$info['value']}" {/if}>
        </div>
      </div>
    
   <input type="hidden" name="id" {if(isset($info['id']))} value="{$info['id']}" {/if} >
    <div class="col-sm-offset-2 col-sm-10">
        <button id="btnajax" class="btn btn-danger">提交</button>
    </div>
  </div>
</form>

<script type="text/javascript">
$(function(){

    $("#btnajax").click(function () {

    var options = {
       url: "{:url('config_edit')}",
      // type : 'POST',
     dataType : 'json',
      success : function(data) {
        $(".layui-layer-close").click();

       layer.alert(data.msg, {
          time: 20000,
          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
          closeBtn: 0,
          anim: 4
        }, function(){
           window.location.href = document.URL;
        })
      },
      error: function(data) {
         $(".layui-layer-close").click();
        layer.alert(data.msg, {
          time: 20000,
          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
          closeBtn: 0,
          anim: 4
        }, function(){
           window.location.href = document.URL;
        })
      }
    };
      $("#config_add").ajaxForm(options);
   })
});

</script>
