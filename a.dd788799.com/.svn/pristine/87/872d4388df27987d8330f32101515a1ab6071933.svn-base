        </thead>

        <tbody>
        {{each nums line index1}}
        <tr>
            {{each line num index2}}

            <td style="cursor: pointer;"><span class="ball-icon ball-{{num | number}}"></span></td>
            <td style="cursor: pointer;"><strong class="color-red color-333 pl">{{pl.pl}}</strong></td>
