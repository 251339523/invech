<input type="hidden" name="playedGroup" value="<?=$groupId?>"/>
<input type="hidden" name="playedId" value="<?=$playedId?>"/>
<input type="hidden" name="type" value="<?=$type?>"/>
<input type="hidden" name="playedName" value="<?=$played['name']?>"/>
<!-- mobile 江苏快3_二不同号 -->
<div id="sscContent">
    <div class="lot-content clearfix">
        <div class="fl main-left re-main-left k3_2bt_contain">
            <div class="table-common table-common-reset" id="table-common">
                <script type="text/html" id="k3_2bt">
                    <table width="100%" border="0" cellpadding="0" cellspacing="0">
                        <thead>
                        <tr>
                            <th colspan="6"><i>二不同号</i><strong>@<span class="pl red" data-plid="{{pls[0].pls[0].id}}">{{pls[0].pls[0].pl}}</span></strong>(请选择2~6个号码)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="pp" min-len="2" action="k3_2bt">
                            <th>
                                {{each pls[0].arr val idx}}
                                {{each val value index}}
                                <div onclick="setQuickPick_lhc(this,true)" class="set_quick_div_9">
                                    <strong style="line-height: 26px;">{{value}}</strong>
                                    <input type="checkbox" data-name="{{pls[0].name}}-{{value}}" value="{{value}}" style="display: none;">
                                </div>
                                {{/each}}
                                {{/each}}
                            </th>
                        </tbody>
                    </table>
                </script>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            pls[0].arr = [[1,2],[3,4],[5,6]];
            var html = template("k3_2bt", {pls: pls});
            $('.table-common').html(html);
        });
    });
</script>