<script type="text/html" id="six_dw">
    <table width="100%" border="1" class="pp" action="six_dw" data-line="5" style="overflow: auto;">
        <thead>
        <tr>
            <th width="47">号码</th>
            <th width="56">赔率</th>
            <th>金额</th>
            <th width="47">号码</th>
            <th width="56">赔率</th>
            <th>金额</th>
            <th width="47">号码</th>
            <th width="56">赔率</th>
            <th>金额</th>
            <th width="47">号码</th>
            <th width="56">赔率</th>
            <th>金额</th>
            <th width="47">号码</th>
            <th width="56">赔率</th>
            <th>金额</th>
        </tr>
        </thead>

        <tbody>
        {{each plg.sz.lines line index1}}
        <tr>
            {{each line pl index2}}

            <td style="cursor: pointer;" onclick="setQuickPick(this)"><span class="ball-icon ball-{{pl.value | number}}"></span></td>
            <td style="cursor: pointer;" onclick="setQuickPick(this)"><strong class="color-red pl">{{pl.pl}}</strong></td>
            <td><input type="text" class="table-txt" data-name="{{plg.name}}-{{pl.value}}" data-plid="{{pl.id}}"
                       data-pl="{{pl.pl}}"></td>

            {{/each}}
        </tr>
        {{/each}}
        </tbody>

        <tbody>
        {{each plg.sm.lines line index1}}
        <tr>
            {{each line pl index2}}

            <td style="cursor: pointer;"  onclick="setQuickPick(this)">{{pl.value}}</td>
            <td style="cursor: pointer;"  onclick="setQuickPick(this)"><strong class="color-red pl">{{pl.pl}}</strong></td>
            <td><input type="text" class="table-txt" data-name="{{plg.name}}-{{pl.value}}" data-plid="{{pl.id}}"
                       data-pl="{{pl.pl}}"></td>

            {{/each}}
        </tr>
        {{/each}}
        </tbody>
    </table>
</script>

<script>
    //var pls;//玩法的所有赔率
    //var plg;//当前赔率组

    function changeTab(self) {
        $(self).siblings().removeClass('active');
        $(self).addClass('active');
        var $tabs = $(self).parent().children();
        var index = $tabs.index(self);
        plg = pls[index];
        plg.sz = plg.pls.slice(0, 49);		// 数字盘
        plg.sm = plg.pls.slice(49);			// 大小单双盘
        plg.sz.lines = group_six_sz(plg.sz);
        plg.sm.lines = group_six_sm(plg.sm);
        var html = template("six_dw", {plg: plg});
        $('.table-common').html(html);
    }

    $(function () {
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            $('.T-tab.clearfix').children().eq(0).click();
        });
    });
</script>    
