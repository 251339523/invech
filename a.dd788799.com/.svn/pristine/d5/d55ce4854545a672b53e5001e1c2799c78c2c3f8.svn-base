<script>
    $(function () {
        //循环表格放到table-common
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            // 特码
            var temp = [];
            for (var j = 0, _pls = pls[0].pls; j < _pls.length; j += 2) {
                var t = [];
                for (var r = j; r < 2 + j; r++) {
                    switch (parseInt(_pls[r].value)) {
                        case 1:
                        case 4:
                        case 7:
                        case 10:
                        case 16:
                        case 19:
                        case 22:
                        case 25:
                            _pls[r].bg = 'green';
                            break;
                        case 2:
                        case 5:
                        case 8:
                        case 11:
                        case 17:
                        case 20:
                        case 23:
                        case 26:
                            _pls[r].bg = 'blue';
                            break;
                        case 3:
                        case 6:
                        case 9:
                        case 12:
                        case 15:
                        case 18:
                        case 21:
                        case 24:
                            _pls[r].bg = 'red';
                            break;
                        default:
                            _pls[r].bg = 'grey';
                    }
                    t.push(_pls[r])
                }
                temp.push(t);
            }
            pls[0].pls = temp;
            // 双面
            var arr = ['大', '小', '红波', '豹子', '单', '双', '绿波', '大单', '小单', '蓝波', '大双', '小双', '极大', '极小'];
            pls[1].pls.sort(function (a, b) {
                return arr.indexOf(a.value) - arr.indexOf(b.value);
            });
            arr = [];
            for (var i = 0, _pls = pls[1].pls, len = 2; i < _pls.length; i += len) {
                temp = [];
               /* if (i == 4) {
                    len = 3
                } else if (i > 9) {
                    len = 2
                }*/
                for (var j = i; j < i + len; j++) {
                    switch (_pls[j].value) {
                        case '大':
                        case '小':
                        case '单':
                        case '双':
                        case '红波':
                        case '极大':
                        case '极小':
                            _pls[j].bg = 'red';
                            break;
                        case '绿波':
                        case '小':
                        case '豹子':
                            _pls[j].bg = 'green';
                            break;
                        default:
                            _pls[j].bg = 'blue';
                            break;
                    }
                    if (_pls[j].value.length == 2) {
                        _pls[j].eclass = 'biger';
                    } else {
                        _pls[j].eclass = ''
                    }
                    temp.push(_pls[j]);
                }
                arr.push(temp);
            }
            pls[1].pls = arr;
            //  checkbox
            var options = [];
            for (var i = 0; i < 28; i++) {
                options.push(i);
            }
            console.log(pls);
            var html = template("xy28_dw", {pls: pls, options: options});
            $('.table-common').html(html);
        });
    });

    function get3data() {
        if ($('#ball_5_1').val() != '') {
            checkAmount();
            var arr = [];
            $('.select_data').each(function (index, value) {
                arr.push($(value).val());
            });
            var _dataName = $('#ball_5_1').attr('data-name').split('-')[0];
            $('#ball_5_1').attr('data-name', _dataName + '-' + arr.join(','));
        }
    }
</script>