*{
    margin:0;
    padding:0;
}
body{
   font-family: "Microsoft YaHei", "simsun", "Helvetica Neue", Arial, Helvetica, sans-serif;

}
.container{

}
.container main img{
    width: 100%;
    box-sizing: border-box;
}
.container main ul.login{
    box-sizing: border-box;
    width:90%;
    margin-left: 5%;
    margin-top: -.5rem;
}
.container main ul.login li{
    width:100%;
    border-bottom: 1px solid #dddddd;
    height: 1rem;
    box-sizing: border-box;
}
.container main ul.login li img{
    width: .4rem;
    height: .44rem;
    margin-top:.28rem;
    float: left;
}
.container main ul.login li input{
    width: 80%;
    height: .6rem;
    margin-top: .2rem;
    float: left;
    border: none;
    outline: none;
    text-indent: .25rem;
}
.container main ul.login li input#yzm{
    width: 60%;
}
.container main ul.login li a{
    display: inline-block;
    float: right;
    height: .6rem;
    text-decoration: none;
    font-size: .4rem;
    background: red;
    margin-top: .2rem;
    margin-right: .2rem;
    width: 1.2rem;
    text-align: center;
    line-height: .6rem;
}
.container main button{
    width: 6.4rem;
    height: .8rem;
    background: #ff7007;
    color: #fff;
    font-size: .32rem;
    line-height: .8rem;
    text-align: center;
    margin-top: .2rem;
    margin-left: .55rem;
    border: none;
    outline: none;
    border-radius: 5px;
    box-sizing: border-box;
}
.container main p{
    width: 6.4rem;
    height: .4rem;
    margin-left:.55rem;
    margin-top:.1rem;
    font-size: .24rem;
    color: #ccc;
    text-align: center;
}
.container main p a{
    float: left;
    font-size: .24rem;
    color: #ff7007;
    text-decoration: none;
    line-height: .4rem;
    padding: .05rem;
}
.container main p a.right{
    float: right;
}

/** 遮罩 **/
.curtion{
    position: fixed;
    left: 0;
    right: 0;
    top:0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
}

.curtion .box{
    width: 5.8rem;
    height: 5.88rem;
    position: absolute;
    left:50%;
    margin-left: -2.9rem;
    top:3rem;
    overflow: visible;
    background: #fff;
    border-radius: 5px;
    text-align: center;
    font-size:.36rem;
    color: #5f616e;
}
.curtion .box img{
    width:2.89rem;
    height: 2.6rem;
    margin-top:-1.2rem;
   /* margin-left:1.45rem;*/
}
.curtion .box div{
    font-size: .38rem;
    color: #ff4f51;
    margin-top: .5rem;
    margin-bottom: .1rem;
    font-weight: 500;
}
.curtion .box p{
    font-size:.3rem;
}
.curtion .box button{
    width: 4.9rem;
    height: .9rem;
    background: #ff7007;
    color: #fff;
    text-align: center;
    line-height: .9rem;
    font-size: .36rem;
    margin-left: .45rem;
    box-sizing: border-box;
    border: none;
    outline: none;
    border-radius: 25px;
    margin-top: .7rem;
    display: block;
}
.curtion .box a{
    display: inline-block;
    margin: .2rem auto;
    font-size: .28rem;
    color: #0095ff;
    margin-top: .3rem;
    padding: .1rem;
}
.tip{
    width:100%;
    height: .8rem;
    position: absolute;
    top:10.2rem;
    font-size: .25rem;
    line-height: .8rem;
    text-align: center;
}
.tip span{
    padding: .15rem .3rem;
    background: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 8px;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
    border: 1px solid #FFF!important;
}