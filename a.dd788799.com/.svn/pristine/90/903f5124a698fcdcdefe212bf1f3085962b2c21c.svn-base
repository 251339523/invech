<!-- mobile 六合彩_全不中 -->
<div id="sscContent">
    <div class="lot-content clearfix">
        <div class="fl main-left">
            <div class="hd clearfix">
                <div class="fr">
                    <div class="T-tab clearfix f-tab f-bottom">
                        <a href="javascript:void(0)" onclick="changeTab(this)">五不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">六不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">七不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">八不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">九不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">十不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">十一不中</a>
                        <a href="javascript:void(0)" onclick="changeTab(this)">十二不中</a>
                    </div>
                </div>
            </div>
            <div class="table-common" id="table-common">
            </div>
            <div class="hd clearfix rehd tzgz" id="toptouzhu">
                <div class="fl refl xzje">
                    下注金额：<input type="text" class="txt" id="inputMoney">
                </div>
                <div class="kjanniu">
                    <a href="javascript:void(0)" class="img-50" data-num="50"></a>
                    <a href="javascript:void(0)" class="img-100" data-num="100"></a>
                    <a href="javascript:void(0)" class="img-500" data-num="500"></a>
                    <a href="javascript:void(0)" class="img-1000" data-num="1000"></a>
