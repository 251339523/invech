{extend name="public/user_head"/}
{block name="body"}
<header class="header">
    <i class='left' onclick="javascript:history.back(-1);">返回</i>
    <h1>账变明细</h1>
</header>
<main class="inner_body">
    <section class="fund_detail">
         <ul class="condition">
            <li><span>日期选择：</span><input type="date" value="" id="_date"/></li>
            <li>
                <select id="_type">
                    <option value="">所有类别</option>
                    {foreach  $type as $k=>$v}
                        <option value="{$k}">$v</option>
                    {/foreach}
                </select>
                <span>资金类别：</span>
            </li>
        </ul>
    </section>
    <section class="table">
       <table>
            <thead>
                <tr>
                    <th>日期</th>
                    <th>资金类别</th>
                    <th>变更金额</th>
                    <th>之前金额</th>
                    <th>之后金额</th>
               </tr>
            </thead>
            <tbody id="lists">
                  {if(!$list->isEmpty())}
                    {foreach $list as $v}
                        <tr>
                            <td>{$v->created_at}</td>
                            <td>{$type[$v->type]}</td>
                            <td>{$v->amount}</td>
                            <td>{$v->f_balance}</td>
                            <td>{$v->t_balance}</td>
                        </tr>
                    {/foreach}
                {else}
                    <tr><td colspan="5" styl="text-align:center;">暂无数据</td></tr>
                {/if}
            </tbody>
        </table>
    </section>
    <div class="dropload-down"><div class="dropload-noData"></div></div>
</main>
<script type="text/javascript">
    mui.init({
        pullRefresh: {
            container: '.table',
            up: {
                contentrefresh: '正在加载...',
                contentnomore:'没有更多数据了',
                callback: pullupRefresh
            }
        }
    });
    var page = 1;
    /**
     * 上拉加载具体业务实现
     */
    function pullupRefresh() {
        setTimeout(function() {
            page++;
            var stime = $('#_date').val();
            var type  = $('#_type').val();
            mui.ajax('/user/money_record?page='+page+'&startTime='+stime+'&type='+type,{
                dataType:'json',//服务器返回json格式数据
                type:'POST',//HTTP请求类型
                timeout:10000,//超时时间设置为10秒；
                headers:{'Content-Type':'application/json'},                  
                success:function(data){
                    var html = data.data;
                    var len  = (html.split("tr").length-1)/2;
                    if(html){
                        $('#lists').append(html);
                        mui('.table').pullRefresh().endPullupToRefresh(false);
                    }else{
                        mui('.table').pullRefresh().endPullupToRefresh(true);
                    }
                },
                error:function(xhr,type,errorThrown){
                    //异常处理；
                    console.log(type);
                }
            });
    
        }, 1500);
    }

    $('#_date').change(function(){
        getChange();
    });
    $('#_type').change(function(){
        getChange();
    });
    function getChange(){
        var stime = $("#_date").val();
        var type  = $('#_type').val();
        mui.ajax('/user/money_record?startTime='+stime+'&type='+type,{
            dataType:'json',//服务器返回json格式数据
            type:'POST',//HTTP请求类型
            timeout:10000,//超时时间设置为10秒；
            headers:{'Content-Type':'application/json'},                  
            success:function(data){
                var html = data.data;
                var len  = (html.split("tr").length-1)/2;
                if(html){
                    if(len<15){
                        mui('.table').pullRefresh().disablePullupToRefresh();
                    }
                    $('#lists').html(html);
                }else{
                     $('#lists').html('<tr><td colspan="5" styl="text-align:center;">暂无数据</td></tr>');
                }
                
              
            },
        });
    }
   
</script>
{/block}