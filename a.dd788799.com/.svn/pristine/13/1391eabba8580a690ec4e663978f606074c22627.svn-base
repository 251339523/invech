<?php
namespace app\index\controller;
use app\index\Base;
use app\common\model\Type;
use app\common\model\Member as UserModel;
class agent extends Base{
    //代理中心
    public function main(){
        if(!$this->user->isAgent()){
            $this->error('请申请代理!');
        }
        $stat = $this->user->getAgentStat();
        $this->assign('stat',$stat);
        return $this->fetch();
    }

    //推广
    public function spread(){
        $agent_id = hashid($this->user->id);
        $url = $_SERVER['SERVER_NAME']."/index/register/agent_id/".$agent_id;
        $this->assign('url',$url);
        return $this->fetch();
    }
    //  添加会员
    public function add_member(){
       if(IS_GET){
            $agent_id = hashid($this->user->id);
             $this->assign('agent_id',$agent_id);
            return $this->fetch();
        }else{
            $UserModel = new UserModel();
            $rel =   $UserModel->register();
            if($rel){
                return $this->success('添加成功');
            }else{
                return $this->error($UserModel->getError());
            }    
        }
    }
    public function member_list(){
        $list = $this->user->getMembers();
        if(IS_AJAX){
            $html ='';
            if(!$list->isEmpty()){
                foreach($list as $v){
                   $html .="<tr>";
                    $html .="<td>".$v->username."</td>";
                    
                    if($v->is_agent=='1'){
                        $html .='<td>代理</td>';
                    }else{
                        $html .='<td>会员</td>';
                    }
                    $html .="<td>".$v->coin."</td>";
                    $html .="<td>".$v->loginTime."</td>";
                    $html .="<td>".$v->created_at."</td>";
                    $html .="</tr>";
                }
            }
            return $this->success('','',$html);
        }else{
            $this->assign('list',$list);
            return $this->fetch();
        }
    }
	 //代理名下会员投注记录
    public function bet_record(){        
        $list       = $this->user->getBetList();
       	if(IS_AJAX){
            $html ='';
            if(!$list->isEmpty()){
                foreach($list as $v){
                    $html .="<tr data-list='".json_encode($v)."'>";
                    if(!empty($v->user->username)){
                        $html .="<td>".$v->user->username."</td>";
                    }else{
                        $html .="<td></td>";
                    }
                    $html .="<td>".$v->created_at."</td>";
                    $html .="<td>".$v->types->title."</td>";
                    $html .="<td>".$v->bet_money."</td>";
                    if(!empty($v->lotteryNo)){
                        if(($v->bonus-$v->bet_money)>0){
                            $html .='<td><span style="color:red">'.($v->bonus-$v->bet_money).'</span></td>';
                        }else{
                            $html .='<td><span style="color:green">'.($v->bonus-$v->bet_money).'</span></td>';
                        }
                    }else{
                        $html .='<td><span style="color:green">未开奖</span></td>';
                    }
                    $html .="</tr>";
                }
            }
            return $this->success('','',$html);
        }else{
            $this->assign('list',$list);
            return $this->fetch();
        }
    }
