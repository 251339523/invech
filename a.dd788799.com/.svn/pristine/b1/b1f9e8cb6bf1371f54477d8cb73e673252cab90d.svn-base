{layout name="layout" /}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">

<form>

    <div class="pull-left" style="margin-left:15px;">
      <select class="form-control input-sm filterStatus" name="type">
        <option value="">全部业务</option>
        {foreach($businesses as $key=>$business)}
          <option value="{$key}" {if($Think.get.type == $key)}selected{/if} >{$business}</option>
        {/foreach}
      </select>
    </div>   

    <div class="pull-left" style="margin-left:15px;">
      <input class="form-control input-sm search" value="{$Think.get.name}" placeholder="请输入用户名称" type="text" name="name" style="width: 250px;">
    </div>  

    <div class="has-feedback pull-right">
      <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
    </div>  

 </form>

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th >ID</th>
            <th >操作员</th>
            <th >业务场景</th>            
            <th >操作内容</th>  
            <th >操作日期</th>
          </tr>
          {foreach($list as $item)}
          <tr>
            <td>{$item->id}</td>
            <td>{$item->username}</td>
            <td>{$businesses[$item->business]}</td>
            <td>{$item->content}</td>
            <td>{$item->created_at}</td>
          </tr>
          {/foreach}
        </table>
        {$list->render()}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
