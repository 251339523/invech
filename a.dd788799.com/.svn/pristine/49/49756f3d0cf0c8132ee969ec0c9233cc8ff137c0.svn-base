<!--</div>      -->
<!--</div>-->
<div class="row" id="graphic" style="height: 480px">
</div>


<script type="text/javascript" src='/js/echarts/echarts.min.js'></script>
<script src="/js/echarts/vintage.project.js"></script>
<script type="text/javascript">
    echarts.registerTheme('vintage', vintage.theme)
   var option = {
        title : {
            // text: '{$page_header}',
            //subtext: "2017-06-06 10:38:49"
        },
       grid: {
           left: '3%',
           right: '12%',
           // bottom: '3%',
           containLabel: true
       },
        tooltip : {
            trigger: 'axis'
        },
        legend: {$legend},
        toolbox: {
            show : true,
            feature : {
                // dataZoom: {},
                // dataView: {readOnly: false},
                // magicType: {type: ['line', 'bar']},
                // restore: {},
                // saveAsImage: {},
            }
        },
        xAxis : {$xAxis},
        yAxis : [
            {
                type : 'value',
                // name: '数量',
                axisLabel : {
                    formatter: '{value} '
                }
            }
        ],
        series : {$series}
    };

    option.legend.right = '3%';
    option.legend.top = '20px';

    var newLegendData = [];
    option.legend.data.forEach(function(v){
        newLegendData.push(v);
        newLegendData.push('');
    })
    option.legend.data = newLegendData;

    var dom = document.getElementById("graphic");
    var myChart = echarts.init(dom);
    myChart.setOption(option);

</script>