{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
	    <div class="box-header">
	      	<button class="btn btn-info pull-right add_rule" >新增</button>
		</div>
     <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
     		<tr>
			 <th>权限名</th>
			 <th>控制器</th>
			 <th>方法</th>
			 <th>操作</th>
			</tr>
			{foreach $list as $v}
				<tr>
					<td>{$v._name}</td>
					<td>{$v.c}</td>
					<td>{$v.a}</td>
					<td>
						<span  data-id="{$v.id}" class="add_qx">添加子权限</span>&nbsp;&nbsp;
						<i  data-id="{$v.id}" class="edit fa fa-pencil"></i>&nbsp;&nbsp;
						<i  data-id="{$v.id}" class="del fa fa-trash"></i>
	          		</td>
				</tr>
			{/foreach}
        </table>
     	
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){
	$(".add_rule").click(function(){
		$.get('/admin/rule_edit.html',{},function(data){
			layer.open({
				type: 1,
				title: '新增会员',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});
	
	$(".edit").click(function(){
		var id = $(this).attr('data-id');
		$.get('/admin/rule_edit.html',{id:id},function(data){
			layer.open({
				type: 1,
				title: '修改会员',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});

	$(".add_qx").click(function(){
		var id = $(this).attr('data-id');
		$.get('/admin/rule_chirden_add.html',{id:id},function(data){
			layer.open({
				type: 1,
				title: '修改会员',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});
	
	$(".del").click(function(){
		var id = $(this).attr('data-id');
		layer.confirm('确定删除?', {
		  btn: ['确定','取消'] //按钮
		}, function(){
			$.get('/admin/rule_del',{id:id},function(data){
				layer.alert(data.msg, {
		          time: 20000,
		          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
		          closeBtn: 0,
		          anim: 4
		        }, function(){
		           window.location.href = document.URL;
		        } )

			},'json');
		}, function(){
		
		});
	});
});

</script>
