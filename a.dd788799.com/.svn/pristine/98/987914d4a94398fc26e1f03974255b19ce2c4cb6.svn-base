{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
          <form>
            <div class="pull-left">
              <input class="form-control input-sm search" value="{$Think.get.name}" placeholder="请输入参数名称" type="text" name="name" >
            </div>   
            <div class="pull-left" style="margin-left:15px;">
              <select class="form-control input-sm filterStatus" name="bonus_id">
                <option value="">全部</option>
                {foreach($bonuses as $bonus)}
                  <option value="{$bonus->id}" {if($Think.get.bonus_id == $bonus->id)} selected {/if} >{$bonus->name}</option>
                {/foreach}
              </select>
            </div>
             <div class="has-feedback pull-left" style="margin-left:15px;">
              <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
            </div>
       </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th >ID</th>
            <th >用户名</th>
            <th >用户昵称</th>            
            <th >红利</th>
            <th >面额</th>
            <th >说明</th>
           
          </tr>
          {foreach($list as $item)}
          <tr>
            <td>{$item->id}</td>
            <td>{$item->user->username}</td>
            <td>{$item->user->nickname}</td>
            <td>{$item->bonus->name}</td>
            <td>{$item->amount}</td>
            <td>{$item->remark}</td>
          </tr>
          {/foreach}
        </table>
        {$list->render()}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
