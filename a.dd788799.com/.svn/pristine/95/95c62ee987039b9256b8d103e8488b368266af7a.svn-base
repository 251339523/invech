{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <button class="btn btn-info pull-right add_group" >新增</button>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>名称</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
        {foreach $list as $v}
         <tr>
          <td>{$v->group_id}</td>
          <td>{$v->group_name}</td>
          <td>  
              {eq name="$v->status" value="1"} <span class="btn-success">开启</span>{/eq}
              {eq name="$v->status" value="0"}  <span class="btn-danger">关闭</span>{/eq}
          </td>
          <td>
            <i  data-id="{$v.group_id}" class="add_qx fa">配置权限</i>&nbsp;&nbsp;
            <i  data-id="{$v.group_id}" class="edit fa fa-pencil"></i>&nbsp;&nbsp;
            <i  data-id="{$v.group_id}" class="del fa fa-trash"></i>
          </td>
        </tr>
        {/foreach}
        </table>
        {$list->render();}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){
  $(".add_group").click(function(){
    $.get('/admin/group_edit.html',{},function(data){
      layer.open({
        type: 1,
        title: '新增角色',
        maxmin: true, //开启最大化最小化按钮
        area: ['500px', '300px'],
        content: data
      });
    },'html');
  });

    $(".add_qx").click(function(){
    var id = $(this).attr('data-id');
    $.get('/admin/group_add_rule.html',{id:id},function(data){
      layer.open({
        type: 1,
        title: '配置权限',
        maxmin: true, //开启最大化最小化按钮
        area: ['1500px', '800px'],
        content: data
      });
    },'html');
  });
  
  $(".edit").click(function(){
    var id = $(this).attr('data-id');
    $.get('/admin/group_edit.html',{id:id},function(data){
      layer.open({
        type: 1,
        title: '修改会员',
        maxmin: true, //开启最大化最小化按钮
        area: ['500px', '300px'],
        content: data
      });
    },'html');
  });
  $(".del").click(function(){
    var id = $(this).attr('data-id');
    layer.confirm('确定删除?', {
      btn: ['确定','取消'] //按钮
    }, function(){
      $.get('/admin/group_del',{id:id},function(data){
        layer.alert(data.msg, {
              time: 20000,
              skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
              closeBtn: 0,
              anim: 4
            }, function(){
               window.location.href = document.URL;
            } )

      },'json');
    }, function(){
    
    });
  });
});

</script>
