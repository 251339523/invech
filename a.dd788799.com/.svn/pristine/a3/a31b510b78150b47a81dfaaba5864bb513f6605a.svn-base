{layout name="layout" /}
<link rel="stylesheet" href="/plugins/webupdate/webuploader.css">
<script src="/plugins/webupdate/webuploader.js"></script>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
      	<i class="fa fa-plus-square pull-right add_third"></i>
	</div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
         	<tr>
	             <th>#</th>
				<th>名称</th>
				<th>编码</th>
				<th>商户ID</th>
				<th>商户密钥</th>
				<th>添加时间</th>
				<th>更新时间</th>
				<th>公钥</th>
				<th>私钥</th>
				<th>配置</th>
				<th>操作</th>
				
            </tr>
			 {foreach $list as $vo} 
	           <tr>        
	             <td>{$vo.id}</td>
					<td>{$vo.name}</td>
					<td>{$vo.type}</td>
					<td>{$vo.pid}</td>
					<td>{$vo.pkey}</td>
					<td>{$vo.created_at}</td>
	              	<td>{$vo.updated_at}</td>
					<td  >		
						{if !empty($vo.pubkey)}	
							<button type="button" data-id={$vo.id} data-type="pubkey" class="btn-xs btn-info">查看</button>
						{/if}
						<div class="pubkey" id="pubkey{$vo.id}" data-id={$vo.id}>编辑</div>
						
					</td>
					<td>					
						{if !empty($vo.prikey)}		
							<button type="button" data-id={$vo.id} data-type="prikey" class="btn-xs btn-info">查看</button>
						{/if}
						<div class="prikey" id="prikey{$vo.id}" data-id={$vo.id}>编辑</div>		
					</td>
					<td>
						<i class="fa fa-gear"></i>
					</td>
	           		<td >
						<i  data-id="{$vo.id}" class="edit fa fa-pencil"></i>
					</td>
	            </tr>
          	 {/foreach}
        	</table>
        {$list->render();}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>

<!-- AdminLTE App -->
<script type="text/javascript">
$(function(){
	
	$(".add_third").click(function(){
		$.get('/pay/third_edit.html',{},function(data){
			layer.open({
				type: 1,
				title: '新增第三方支付',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});
	
	$(".edit").click(function(){
		var id = $(this).attr('data-id');
		$.get('/pay/third_edit.html',{id:id},function(data){
			layer.open({
				type: 1,
				title: '修改第三方支付',
				maxmin: true, //开启最大化最小化按钮
				area: ['900px', '600px'],
				content: data
			});
		},'html');
	});

	$(".prikey").each(function(index,value){
		var pid = $(this).attr('id');
		var id 	= $(this).attr('data-id');
   		var jQuery = $;
   		var uploader =	WebUploader.create({
		    auto : true,
		    swf : '/plugins/webupdate/Uploader.swf',
		    server : '/pay/upload/itemtype/prikey/itemid/'+id,
		    pick : '#'+pid,
	     
	    });
	    uploader.on('uploadSuccess', function(file,data) {
			layer.alert('编辑成功', {
		        time: 20000,
		        skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
		        closeBtn: 0,
		        anim: 4
		    }, function(){
		        window.location.href = document.URL;
		    })
	    });
 	});
	$(".pubkey").each(function(){
		var pid = $(this).attr('id');
		var id 	= $(this).attr('data-id');
   		var jQuery = $;
	    var uploader = WebUploader.create({
	      auto : true,
	      swf : '/plugins/webupdate/Uploader.swf',
	      server : '/pay/upload/itemtype/pubkey/itemid/'+id,
	      pick : '#'+pid,
	    });
	    uploader.on('uploadSuccess', function(file,data) {
			layer.alert('编辑成功', {
		          time: 20000,
		          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
		          closeBtn: 0,
		          anim: 4
		        }, function(){
		           window.location.href = document.URL;
		    })
	    });
 	});

	$(".btn-info").click(function(){
		var id 		=	$(this).attr("data-id");
		var type 	=	$(this).attr("data-type");
		$.get('/pay/third_key_view',{id:id,type:type},function(data){
			if(data.code=='1'){
				layer.open({
					type: 1,
					title: '查看密钥',
					maxmin: true, //开启最大化最小化按钮
					area: ['700px', '400px'],
					content: data.data
				});		
			}else{
				layer.alert(data.msg, {
		          time: 20000,
		          skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
		          closeBtn: 0,
		          anim: 4
		        });
			}
		},'json');

	});


});

</script>
