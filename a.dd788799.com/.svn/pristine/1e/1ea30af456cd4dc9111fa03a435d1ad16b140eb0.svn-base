body{
	background: #f4f4f4;
}
/*home anner*/
.home-banner-wrapper{
	width: 100%;
	height:464px;
}
.slideBox{
	 width:100%; 
	 height:464px;
	 overflow:hidden;
	 position:relative;
}
.slideBox .hd{ 
	height:15px; 
	overflow:hidden;
	position:absolute;
	bottom:20px;
	z-index:1;
	left: 50%;
}
.slideBox .hd ul{ 
	overflow:hidden;
	zoom:1;
}
.slideBox .hd ul li{ 
	float:left; 
	margin-right:2px;  
	width:12px; 
	height:12px; 
	line-height:14px; 
	text-align:center; 
	background:#bebebe; 
	cursor:pointer; 
	border-radius: 50%;
	margin-left: 16px;
}
.slideBox .hd ul li.on{
	 background:#ff0000; 
	 color:#fff; 
}
.slideBox .bd{ 
	position:relative;
	height:100%;
	z-index:0;
}
.slideBox .bd li{ 
	zoom:1; 
	vertical-align:middle; 
}
.slideBox .bd img{ 
	 width:100%; 
	 height:464px;
	display:block;
}
/*公告部分*/
.announcement-wrapper{
	width: 1000px;
	height: 30px;
	margin: 12px auto 12px auto;
	background: #FFFFFF;
}
.txtMarquee-left{ 
	width:1000px;
	height: 30px;
	position:relative;    
}
.txtMarquee-left .bd{ 
	margin-left: 106px;
}
.txtMarquee-left .bd .tempWrap{
	 width:880px !important;
}/* 用 !important覆盖SuperSlide自动生成的宽度，这样就可以手动控制可视宽度。 */
.txtMarquee-left .bd ul{
	 overflow:hidden;
	 zoom:1; 
}
.txtMarquee-left .bd ul li{
	 margin-right:20px;  
	 float:left; 
	 height:30px; 
	 line-height:30px;  
	 text-align:left; 
	 _display:inline;
	  width:auto !important; 
}/* 用 width:auto !important 覆盖SuperSlide自动生成的宽度，解决文字不衔接问题 */
.txtMarquee-left .bd ul li a{
	 color:#999999;  font-size: 14px;
}
.laba{
	position: absolute;
	font-size: 14px;
	color: #999;
	height: 30px;
	line-height: 30px;
	background: url(../images/indexImg/laba.png) no-repeat 10px 5px;
	background-size: 19px 20px;
	padding-left: 35px;
}
/*home main*/
.home-main-wrapper{
	width: 1000px;
	height: auto;
	margin: 0px auto 10px auto;
}
