{extend name="base/common"/}

{block name="title"}<title>用户注册－{$settings.webName}</title>{/block}
{block name="style"}
<link rel="stylesheet" type="text/css" href="/__CSS__/login.css">
{/block}
{block name="script"}
{/block}

{block name="header"}{/block}
{block name="body"}
<div class="m-simpleHeader" id="dvHeader">
    <a href="javascript:history.back(-1);" data-pro="back" data-back="true" class="m-simpleHeader-back"><i class="ico ico-back"></i></a>
    <h1>用户注册</h1>
</div>

<div class="m-login">
    <div class="m-login-tips" id="tips"></div>
    <div class="m-login-form w-form">
        <input type="hidden" id="login_url" value="{:Url('index/login')}">
        <div class="w-form-item m-login-form-account w-inputBar w-bar" id="dvAccount">    <div class="w-bar-label">帐号：</div><a data-pro="clear" href="javascript:void(0);" class="w-bar-input-clear">×</a><div class="w-bar-control"><input placeholder="请输入帐号" autocapitalize="off" data-pro="input" class="w-bar-input" name="username" id="username" type="text"></div></div>
        <div class="w-form-item m-login-form-account w-inputBar w-bar" id="dvPassword">   <div class="w-bar-label">密码：</div><a data-pro="clear" href="javascript:void(0);" class="w-bar-input-clear">×</a><div class="w-bar-control"><input placeholder="请输入密码" autocapitalize="off" data-pro="input" class="w-bar-input" name="password" id="password" value="" type="password"></div></div>
		<div class="w-form-item m-login-form-password w-inputBar w-bar" id="dvPassword2"> <div class="w-bar-label">确认密码：</div><a data-pro="clear" href="javascript:void(0);" class="w-bar-input-clear">×</a><div class="w-bar-control"><input placeholder="请再次输入密码" autocapitalize="off" data-pro="input" class="w-bar-input" name="password_confirm" value="" type="password"></div></div>
        <div class="w-form-item m-login-form-password w-inputBar w-bar" id="dvVerificationCode">
            <div class="w-bar-label">验证码：</div>
            <a data-pro="clear" href="javascript:void(0);" class="w-bar-input-clear">×</a>
            <div class="w-bar-control"><input placeholder="请输入验证码" autocapitalize="off" data-pro="input" class="w-bar-input" name="code" id="VerificationCode" value=""></div>
            <a href="javascript:void(0);" class="banner_yz" style="position: relative;top: -28px;right: -56%;">
                <img id="captcha" style= "width:70px; height: 25px" src="{:url('indexcaptcha/get_captcha?id=login')}">
            </a>
        </div>
        <script type="text/javascript">
            $("#captcha").click(function(){
                $(this).attr('src',"{:url('indexcaptcha/get_captcha?id=login')}");
            })
        </script>
        <div class="w-form-item m-login-form-password w-inputBar w-bar" id="Referee"> <div class="w-bar-label">推荐人：</div><a data-pro="clear" href="javascript:void(0);" class="w-bar-input-clear">×</a><div class="w-bar-control"><input placeholder="请再次输入推荐人" autocapitalize="off" data-pro="input" class="w-bar-input" name="parentId" value=""></div></div>
        <div class="m-login-menu" id="autoCmpl" style="display:none;"></div>
    </div>
    <div class="m-login-tips-bottom" id="tipsBottom"></div>
    <div class="m-login-submit"><button class="w-button w-button-main"  data-action="{:Url('index/register')}" id="btnLogin" onclick="postdata()">注 册</button></div>
</div>

{/block}
{block name="script"}
{/block}
{block name="footer"}{/block}

<script>
</script>