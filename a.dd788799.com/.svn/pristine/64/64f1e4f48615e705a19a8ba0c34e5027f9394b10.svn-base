{extend name="public/user_head"/}
{block name="body"}
<style type="text/css">
    ul.condition li select{
        padding: 0;
    }
    ul.condition li select.left{
        width: 60%;
    }
</style>
<header class="header">
    <i class='left' onclick="javascript:history.back(-1);">返回</i>
    <h1>充值记录</h1>
</header>
<main class="inner_body">
    <section class="fund_detail">
        <ul class="condition">
            <li><span>日期选择</span><input type="date" value="" id="_date"/></li>
        </ul>
    </section>
     <section class="table">
        <div id="pullrefresh" class="mui-content mui-scroll-wrapper">
            <div class="mui-scroll">
                <table>
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>存款金额</th>
                            <th>存款日期</th>
                        </tr>
                    </thead>
                    <tbody id="lists">
                         {if(!$list->isEmpty())}
                            {foreach $list as $v}
                                <tr>
                                    <td>{if(!empty($v->user->username))}{$v->user->username}{/if}</td>
                                    <td>{$v->amount}</td>
                                    <td>{$v->created_at}</td>
                                </tr>
                            {/foreach}
                        {else}
                            <tr><td colspan="3" styl="text-align:center;">暂无数据</td></tr>
                        {/if}
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" id="startTime" value=""/>
        <input type="hidden" id="endTime" value=""/>
    </section>  
</main>
<script type="text/javascript">
    var base_url = '/agent/recharge_record';
    var page = 1;
    $(function () {
        // 设置容器高度
         $('section.table').height($('main').height()-$('ul.condition').height() - $('section.table table tr td').height());
         // 设置默认日期
        //$('#_date').val(formatDate(new Date()).split(' ')[0]);
    });
    // 搜寻日期
    $('#_date').change(function(){
        var stime = $("#_date").val();
        var endTime = stime + " 23:59:59";
            stime = stime+" 00:00:00";
        $('#startTime').val(stime);
        $('#endTime').val(endTime);
        var _url = base_url + '?startTime='+stime+'&endTime='+endTime;
        page = 1;
       loadMore(_url);
    });
    //过滤类型
    $('#_type').change(function () {
        var _url = base_url + '?pay_set_id='+$(this).val();
        page = 1;
        loadMore(_url);
    });
</script>
{/block}