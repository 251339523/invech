{extend name="public/user_head"/}
{block name="body"}
<header class="header">
    <i class='left' onclick="javascript:history.back(-1);">返回</i>
    <h1>充值记录</h1>
</header>
<style type="text/css">
    ul.condition li:last-child span{
        float: left;
    }
    ul.condition li:last-child {
        float: left;
    }
</style>
<main class="inner_body">
    <section class="fund_detail">
        <ul class="condition">
            <li><span>日期选择</span><input type="date" value="" class="left" id="_date"/></li>
        </ul>
    </section>
    <section class="table">
       
        <table>
            <thead class="">
                <tr>
                    <th>充值方式</th>
                    <th>日期时间</th>
                    <th>金额</th>
                </tr>
            </thead>
            <tbody id="lists">
                 {if(!$list['list']->isEmpty())}
                    {foreach($list['list'] as $v)}
                        <tr>
                            <td>{if(!empty($v->way->name))}{$v->way->name}{/if}</td>
                            <td>{$v->created_at}</td>
                            <td>{$v->amount}</td>
                        </tr>
                    {/foreach}
                {else}
                    <tr><td colspan="3" styl="text-align:center;">暂无数据</td></tr>
                {/if}
            </tbody>
        </table>
    </section>
    <div class="dropload-down"><div class="dropload-noData"></div></div>
</main>
<script type="text/javascript">

    $(function(){
    // 页数
    var page = 1;

    // dropload
    var isLoading = false;
    var _limit = $('.inner_body').height() - $('.table').height(); // 首次触底点
    var _step = $('#lists').height();   // 触底步长
    $('#_date').change(function(){
        var stime = $(this).val();
        $.ajax({
            type: 'GET',
            url: '/user/recharge_record?startTime='+stime,
            dataType: 'json',
            success: function(data){
                var rel     = data.data;
                $('.dropload-noData').text('');
                if(rel){
                    result = rel;
                }else{
                    result ='<tr><td colspan="3" styl="text-align:center;">暂无数据</td></tr>';
                }
                page = 1;
                $('#lists').html(result);  
            },
            error: function(xhr, type){
                $('.dropload-noData').text('加载出错了...');
            }
        });
    });
    $('main').on('touchend',function(evt){

        var _top = Math.round($('.table').position().top);
        console.log(_top,_limit,_step);
        if(_top == _limit-_step*(page-1)){
            if(!isLoading){
                page++;
                isLoading = true;
                var stime = $("#_date").val();
                $('.dropload-noData').text('请求数据中...');
                $.ajax({
                    type: 'GET',
                    url: '/user/recharge_record?page='+page+'&startTime='+stime,
                    dataType: 'json',
                    success: function(data){
                        isLoading = false;
                        var rel     = data.data;
                        if(rel){
                            result = rel;
                            $('#lists').append(result);  
                            if($('#lists tr').length%15 != 0){
                                $('.dropload-noData').text('没有更多数据了...');
                            }else{
                                $('.dropload-noData').text('下拉加载更多...');
                            }
                        }else{
                            $('.dropload-noData').text('暂无数据');  
                        }
                    },
                    error: function(xhr, type){
                        isLoading = false;
                       $('.dropload-noData').text('加载出错了...');
                    }
                });

            }
        }
    });

       
    });
    

    </script>
{/block}