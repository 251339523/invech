</div>
<script>
	$(function () {
		oldMoney =  parseFloat($("#wallet").html());
	    //提交余额申请
        $("form[name='withdrawForm']").validate({
            rules: {
                money: {required: true,max: oldMoney }
            },
            messages: {
                money: {
                    required: '* 请输入转账金额',
                    max: '* 最大金额不能超过余额'
                }
            },
			submitHandler: function (form) {
                getWithdraw();
            }
        });

	    //获取最新余额数据
		$("#refreshMoney").click(function () {
			var url = '/user/ajaxGetMoney';
			var data = {};
			$.get(url,data,function (res) {
			    if (res == oldMoney){
					alert('数据是最新数据')
				}else{
                    $("#wallet").html(res);
				}
			})
        })
    })
	function getWithdraw() {
		var amount = $("#money").val();
	    $.get('/user/get_withdraw_info',{amount:amount},function (json) {
console.log(json);
			var html = '<table class="_talbe">' +
						'<td>所需打码量</td><td>' + json.audit_remain + '</td>' +
						'<td>提款金额</td><td>' + json.amount + '</td>' +
						'<td>实际到账</td><td>' + json.real_amount + '</td>' +
						'<td>提款扣款</td><td>' + json.debit_amount + '</td>' +
						'</table>';
			$("#money").data('check',json.data);
			layer.confirm(html, {
			  btn: ['继续','取消'] //按钮
			}, function(){				
				//layer.msg('的确很重要', {icon: 1});		        
		        var data = {};
		        var amount = $("#money").val();
		        data.amount = amount;
		        var bank = {$user->bank->toJson();};
		        var check = $("#money").data('check');
		        Object.assign(data,bank,check);

		        var url = '/user/withdraw';
		        $.post(url,data,function (res) {

		            console.log(res);
		            if (res.code){
		                $("#wallet").html(res.data.coin);
		                $("#wallet_1").html(res.data.fcoin);
		            }else{
		                alert(res.msg);
					}
		        },'json')			  
			});	
	    },'json');

	

    }
</script>