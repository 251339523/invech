{layout name="layout" /}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th >ID</th>
            <th >标题</th>
            <th >是否显示</th>            
            <th >添加日期</th>
            <th >操作</th>
          </tr>
          {foreach($list as $item)}
          <tr>
            <td>{$item->id}</td>
            <td>{$item->title}</td>
            <td>{$item->enable}</td>
            <td>{$item->addTime|date='Y-m-d H:i:s',###}</td>
            <td>
                编辑/删除
            </td>
          </tr>
          {/foreach}
        </table>
        {$list->render()}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
