<script type="text/javascript">
    $(function () {
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            var res = get_final_sx(pls);
            pls.push(res);
            // 格式化尾数数据
            var temp = pls[1].pls;
            pls[1].pls = [];
            for (var i = 0; i < temp.length; i += 5) {
                var arr = [];
                arr.push(temp[i])
                arr.push(temp[i + 1])
                arr.push(temp[i + 2])
                arr.push(temp[i + 3])
                arr.push(temp[i + 4])
                pls[1].pls.push(arr);
            }
            var html = template("six_xw", {pls: pls});
            $('.table-common').html(html);
        });
    });
</script>