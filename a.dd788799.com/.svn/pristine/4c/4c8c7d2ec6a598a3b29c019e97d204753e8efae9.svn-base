        $data = $query->paginate(10);
     
        return $data;
    }     

    public function getAvailMembers($request){
        
        $query = $this->availMembers()->getAvailMemberBuild($request);
       
        $data = $query->paginate(10);
     
        return $data;
    }

    //----------------后台------------------

    public static function getList($request){

        $query = (new static())->getBuild($request);

        $data = $query->paginate();
     
        return $data;
    }   


