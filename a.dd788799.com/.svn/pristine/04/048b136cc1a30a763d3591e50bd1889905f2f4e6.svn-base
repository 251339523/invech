<script type="text/javascript">
    // 签到
    $('#signIn').click(function (evt) {
        $.ajax({
            url:'签到',
            success:function (data) {
                alert(data.msg);
            },
            error:function (error) {
                console.log(error);
                alert('ajax error');

            }
        })
    });
    $('.records ul li').click(function(){
        var _url = $(this).attr('data-url');
        location.href = _url;
    });
    $('.security ul li').click(function(){
        var _url = $(this).attr('data-url');
        location.href = _url;
    });
    $('#pay').click(function(){
        var _url = $(this).attr('data-url');
        location.href = _url;
    });
    // 提现
    $('#withdraw').click(function(){
        $.ajax({
            url: "/user/is_bank",
            dataType:'json',
            type:'POST',
            success:function (data) {
                var _url = null;
                if(data.code == '1'){
                    _url = "/user/withdraw";
                }else{
                    _url = "/user/bank";
                    alert('尚未绑定银行卡，前往绑定？');
                }
                setTimeout(function () {
                    location.href = _url;
                },200);
            },
            error:function () {
                console.log(error);
                alert('ajax error');
            }

        })

    })
</script>
