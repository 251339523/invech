var MaxZjCount={
    // 普通单式，直接对比
    ds:function(){
        var zjCount=0,t=1,s;
        $.each(this.split('|').sort(), function(){
            if(s==String(this)){
                t++;
            }else{
                s=this;
                if(t>zjCount) zjCount=t;
                t=1;
            }
        });
        if(t>zjCount) zjCount=t;
        return zjCount;
    },

    // 普通复式
    fs:function(){
        return 1;
    },
    // 大小单双
    dxds:function(){
        var d=this.split(',').map(function(v){
            return v
                .replace('单','双')
                .replace('大', '小')
                .split("").sort().join('')
                .replace(/双{2,}/,'双')
                .replace(/小{2,}/,'小')
                .length;
        });
        return d[0] * d[1];
    },

    // 五星定位胆
    dd5x:function(){
        return this.split(',').filter(function(v){return v!='-'}).length;
    },
    // 不定胆
    bdd:function(){
        return this.length>3?3:this.length;
    }
}

//{{{ 播放声音
function playVoice(src, domId){
    if(getVoiceStatus()=='off') return;
    var $dom=$('#'+domId)
    if($.browser.msie){
        // IE用bgsound标签处理声音

        if($dom.length){
            $dom[0].src=src;
        }else{
            $('<bgsound>',{src:src, id:domId}).appendTo('body');
        }
    }else{
        // IE以外的其它浏览器用HTML5处理声音
        if($dom.length){
            $dom[0].play();
        }else{
            $('<audio>',{src:src, id:domId}).appendTo('body')[0].play();
        }
    }
}

function setVoiceStatus(flag){
    var session=(typeof sessionStorage!='undefined');
    var key='voiceStatus';
    if(session){
        if(!flag){
            sessionStorage.setItem(key,'off');
        }else{
            sessionStorage.removeItem(key);
        }
    }else{
        if(!flag){
            $.cookie(key, 'off');
        }else{
            $.cookie(key, null);
        }
    }
}

function getVoiceStatus(){
    var key='voiceStatus';
    if(typeof sessionStorage!='undefined'){
        return sessionStorage.getItem(key);
    }else{
        return $.cookie(key);
    }
}

function voiceKJ(){
    var $dom=$('#voice');
    if(getVoiceStatus()!='off'){
        setVoiceStatus(false);
        $dom.attr('class','voice-off').attr('title', '声音关闭，点击开启');
    }else{
        setVoiceStatus(true);
        $dom.attr('class','voice-on').attr('title', '声音开启，点击关闭');
    }
}
