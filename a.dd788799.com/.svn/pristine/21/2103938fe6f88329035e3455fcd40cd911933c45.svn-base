{layout name="layout" /}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">


<form>
      <div class="has-feedback pull-right">
        <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
      </div>

      <div class="pull-left" style="margin-left:15px;">
        <input class="form-control input-sm search" value="{$Think.get.bonus_name}" placeholder="请输入红利名称" type="text" name="bonus_name" style="width: 250px;">
      </div>   

 </form>

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th >ID</th>
            <th >红利</th>
            <th >名称</th>            
            <th >描述</th>
            <th >编码</th>
            <th >流水要求</th>
            <th >固定面额</th>
            <th >流水比例</th>
            <th >奖金上限</th>
            <th >操作</th>
          </tr>
          {foreach($list as $item)}
          <tr>
            <td>{$item->id}</td>
            <td>{$item->bonus->name}</td>
            <td>{$item->name}</td>
            <td>{$item->desc}</td>
            <td>{$item->code}</td>
            <td>{$item->limit}</td>
            <td>{$item->amount}</td>
            <td>{$item->radio}%</td>
            <td>{$item->max}</td>
            <td>
                编辑/删除
            </td>
          </tr>
          {/foreach}
        </table>
        {$list->render()}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
