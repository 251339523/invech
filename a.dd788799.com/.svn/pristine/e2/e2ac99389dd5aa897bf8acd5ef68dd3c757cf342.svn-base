            <div class="table-common table-common-reset" id="table-common">
                <script type="text/html" id="k3_tx">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="pp" action="pick_dw" length="1">
                        <thead>
                        <tr>
                            <th colspan="6">通选</th>
                        </tr>
                        <!--<tr>
                            <th>号码</th>
                            <th>赔率</th>
                            <th>金额</th>
                            <th>号码</th>
                            <th>赔率</th>
                            <th>金额</th>
                        </tr>-->
                        </thead>
                        <tbody>
                        {{each pls[0].pls value index}}
                        <tr>
                            <td onclick="setQuickPick(this,true)"><strong>{{value.value}}<br><span class="color-red pl">{{value.pl}}</span></strong>
                            </td>
                            <td onclick="setQuickPick(this,true)" style="display: none;"><strong class="color-red pl" data-plid="{{value.id}}">{{value.pl}}</strong>
                            </td>
                            <td style="display: none;"><input type="text" oninput="checkAmount()" class="table-txt" data-name="{{pls[0].name}}-{{value.value}}"
                                       data-plid="{{value.id}}" data-pl="{{value.pl}}"></td>
                            {{/each}}
                        </tbody>
                    </table>
                </script>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            var html = template("k3_tx", {pls: pls});
            $('.table-common').html(html);
        });
    });
</script>