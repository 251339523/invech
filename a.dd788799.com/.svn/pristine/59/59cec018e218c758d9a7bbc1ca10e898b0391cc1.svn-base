    //----------------后台------------------

    public static function getList($request){
    
        $params = $request->param();

        $query = self::order('type')->order('id desc');

        if($params['type']??''){
           $query->where('type', $params['type']);
        }
        if($params['keywords']??''){
             $query->where('title|shortName', 'like','%'.trim($params['keywords']).'%');
         }
        $data = $query->paginate();
        
        return $data;
    }


