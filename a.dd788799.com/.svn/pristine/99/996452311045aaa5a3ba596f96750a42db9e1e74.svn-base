{layout name="layout" /}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <button class="btn btn-default pull-left add_member">新增</button>

        <form>
            <div class="has-feedback pull-right">
              <button type="submit" class="btn btn-block btn-default btn-sm filter">查询</button>
            </div>
          
            <div class="pull-right" style="margin-left:15px;">
              <input class="form-control input-sm search" value="{$Think.get.name}"  name="name" id="name"  placeholder="名称" type="text"  style="width: 250px;">
            </div> 
            <div class="pull-right" >
                <select class="form-control input-sm" name="enable" aria-hidden="true">
                  <option value="" >全部状态</option>
                    {foreach $enable as $k=>$v}
                      <option value="{$k}" {if($Think.get.enable==$k)} selected="selected"{/if}>{$v}</option>
                    {/foreach}
                </select>
            </div>
         </form>
    

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th>#</th>
            <th>名称</th>
            <th>描述</th>
            <th>状态</th>
            <th>事件</th>
            <th>业务</th>
            <th>额外参数</th>
            <th>添加时间</th>
            <th>操作</th>
        </tr>
        {foreach $list as $item}
         <tr>
            <td>{$item->id}</td>
            <td>{$item->name}</td>
            <td>{$item->desc}</td>
            <td>
              {foreach $enable as $k=>$val}
                  {eq name="$item->enable" value="$k"}{$val}{/eq}
               {/foreach}
             </td>
            <td>{$item->event}</td>
            <td>{$item->business}</td>
            <td>{$item->extra}</td>
            <td>{$item->created_at}</td>
            <td >
              <i  data-id="{$item.id}" class="edit fa fa-pencil"></i>&nbsp;&nbsp;
              <i  data-id="{$item.id}" class="del fa fa-trash"></i>
               <a href='{:url('bonus/config',['bonus_id'=>$item->id])}'>查看配置</a>
            </td>
        </tr>
        {/foreach}
        </table>
        {$list->render();}
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<script type="text/javascript">
$(function(){
  $(".add_member").click(function(){
    $.get('/bonus/form.html',{},function(data){
      layer.open({
        type: 1,
        title: '新增会员',
        maxmin: true, //开启最大化最小化按钮
        area: ['900px', '600px'],
        content: data
      });
    },'html');
  });
  
  $(".edit").click(function(){
    var id = $(this).attr('data-id');
    $.get('/bonus/form.html',{id:id},function(data){
      layer.open({
        type: 1,
        title: '修改会员',
        maxmin: true, //开启最大化最小化按钮
        area: ['900px', '600px'],
        content: data
      });
    },'html');
  });
  $(".del").click(function(){
    var id = $(this).attr('data-id');
    layer.confirm('确定删除?', {
      btn: ['确定','取消'] //按钮
    }, function(){
      $.get('/bonus/del',{id:id},function(data){
        layer.alert(data.msg, {
              time: 20000,
              skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
              closeBtn: 0,
              anim: 4
            }, function(){
               window.location.href = document.URL;
            } )

      },'json');
    }, function(){
    
    });
  });
});

</script>
