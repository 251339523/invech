{extend name="public/user_head_new"/}
{block name="body"}
<style type="text/css">
    section.table{
        position: static;
    }
    section.table table tr td:last-child{
        color: #FF4200;
    }
    section.table table tr td:last-child span{
        display: inline-block;
        float: right;
        color: #999999;
        font-size: .36rem;
        margin-right: 0.2rem;
    }
</style>
<div class="container">
    <header class="header">
        <i class='left' onclick="javascript:history.back(-1);">返回</i>
        <h1>未结注单</h1>
    </header>
    <main class="inner_body">
        <section class="table">
            <div id="pullrefresh" class="mui-content mui-scroll-wrapper">
                <div class="mui-scroll">
                    <table>
                        <thead>
                        <tr>
                            <th>彩种名称</th>
                            <th>未结注单数</th>
                        </tr>
                        </thead>
                        <tbody id="lists">
                            {if(!$list->isEmpty())}
                                {foreach $list as $v}
                                    <tr class="record" data-url="/user/bet_record_miss_detail/type/{$v->type}">
                                        <td>{$v->types->title}</td>
                                        <td>{$v->counts}<span>></span></td>
                                    </tr>
                                {/foreach}
                            {else}
                                <tr><td colspan="5" styl="text-align:center;">暂无数据</td></tr>
                            {/if}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>
</div>
<script type="text/javascript">
 // 点击每行
    mui('body').on('tap','#lists .record',function(){
        var _url = $(this).attr('data-url');
        location.href = _url;
    });

</script>
{/block}