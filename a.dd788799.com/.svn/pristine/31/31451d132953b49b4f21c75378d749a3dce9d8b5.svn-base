<script type="text/html" id="pk10_sm">
    {{each pls value index}}
    <table width="100%" border="0" cellpadding="0" cellspacing="0" class="pp" action="pk10_sm" length="1">
        <thead>
        <tr>
            <th colspan="6">{{value.name}}</th>
        </tr>
       <!-- <tr>
            <th>号码</th>
            <th>赔率</th>
            <th>金额</th>
            <th>号码</th>
            <th>赔率</th>
            <th>金额</th>
        </tr>-->
        </thead>
        <tbody>
        {{each value.pls _value _index}}
        <tr>
            {{each _value _v _i}}
            <td onclick="setQuickPick(this,true)"><strong>{{_v.value}}<br/><span class="color-red pl">{{_v.pl}}</span></strong></td>
            <td onclick="setQuickPick(this,true)" style="display: none;"><strong class="color-red pl">{{_v.pl}}</strong></td>
            <td style="display: none;"><input type="text" oninput="checkAmount()" class="table-txt" data-name="{{value.name}}-{{_v.value}}" data-plid="{{_v.id}}"
                       data-pl="{{_v.pl}}"></td>
            {{/each}}
        </tr>
        {{/each}}
        </tbody>
    </table>
    <br/>
    {{/each}}
</script>
<script>
    //var pls;//玩法的所有赔率
    //var plg;//当前赔率组
    $(function () {
        var playedId = "<?=$playedId?>";
        $.getJSON("/game/pl/playedId/" + playedId, function (data) {
            pls = data;
            $.each(pls, function (index, value) {
                value.pls = group(value.pls, 6);
            })
            console.log(pls);
            var html = template("pk10_sm", {pls: pls});
            $('.table-common').html(html);
        });
    });
</script>
