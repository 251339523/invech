{layout name="layout" /}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <i class="fa fa-plus-square pull-right add_admin"></i>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
       		<tr>
    			  <th>#</th>
    			  <th>角色名称</th>
    			  <th>角色描述</th>
    			  <th>操作</th>
  			  </tr>
  			 {foreach $list as $v}
    			 <tr>
    				<td>{$v.id}</td>
    				<td>{$v.name}</td>
    				<td>{$v.desc}</td>
    				<td>
              {if(!$v->isAdmin())}
               <i class="fa fa-edit edit" data-id="{$v->id}"></i> &nbsp;&nbsp;
               <i class="fa fa-times-circle delBtn" data-id="{$v->id}"></i>
              {/if}
            </td>
    			</tr>
  			 {/foreach}
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>

<script type="text/javascript">
$(function(){

  $(".add_admin").click(function(){
    $.get('/admin/role_edit.html',{},function(data){
      layer.open({
        type: 1,
        title: '新增角色',
        maxmin: true, //开启最大化最小化按钮
        area: ['900px', '600px'],
        content: data
      });
    },'html');
  });
  
  $(".edit").click(function(){
    var id = $(this).attr('data-id');
    $.get('/admin/role_edit.html',{id:id},function(data){
      layer.open({
        type: 1,
        title: '修改角色',
        maxmin: true, //开启最大化最小化按钮
        area: ['1100px', '700px'],
        content: data
      });
    },'html');
  });

  $(".delBtn").click(function(){
    var id = $(this).attr('data-id');
    layer.confirm('确定删除?', {
      btn: ['确定','取消'] //按钮
    }, function(){
      $.get('/admin/role_del',{id:id},function(data){
        layer.alert(data.msg, {
              time: 20000,
              skin: 'layui-layer-molv', //该皮肤由layer.seaning.com友情扩展。关于皮肤的扩展规则，去这里查阅
              closeBtn: 0,
              anim: 4
            }, function(){
               window.location.href = document.URL;
            } )

      },'json');
    });
  });
});

</script>