<!DOCTYPE html>
<html>
    <head>
    <title>ALAFEI API文档</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="/doc/bootstrap.css" rel="stylesheet" media="screen">
    <link href="/doc/style.css" rel="stylesheet">
    <script src="/doc/jquery-2.2.3.min.js"></script>
    <script src="/doc/jquery.form.js"></script>
    <style>
        p{
            color:#000;
        }
        ._ol{
            display: block;
        }
        ._ol li{
            list-style: none;
            height: 24px;
            line-height: 24px;
        }
        ._ol li:hover{
            background: #fff;
        }
        ._ol li:hover a{
            text-decoration: none;
        }
    </style>
    </head>
<body>

{include file="../application/api/view/document/fakeloader.html" /}
    
<div class="container-fluid">
    <div class="row-fluid">
        <div id="sidenav" class="span2">
        <nav id="scrollingNav">
          <ul class="sidenav nav nav-list">
                {foreach($groups as $group)}
                    <li class="nav-header" onclick="showSub(<?php echo count($group->apis);?>,event)">
                        <a>{$group.name}</a>
                    </li>
                    {foreach($group->apis as $api)}
                        <ol class="_ol">
                            <li>
                                <a onclick="apiDetails(this)" url="{:url('details', ['id' => $api.id])}" style="cursor:pointer;">{$api.name}</a>
                            </li>
                        </ol>
                    {/foreach}
                {/foreach}
          </ul>
        </nav>
    </div>

    <div id="content">
        {$content}
        <div id="remark">
            {$remark}
        </div>
    </div>

    </div>
</div>

<script>

    function apiDetails(obj) {
        $('.fakeloader').show();
        $.get($(obj).attr('url'), {}, success, "json");
        return false;
        function success(data) {
            $("#content").html(data.content);
            $('.fakeloader').hide();
        }
    }

    function showSub(len,evt){
        var _ol = $(this).siblings();
        console.log(evt.target);
        console.log(_ol);
    }
</script>

</body>
</html>