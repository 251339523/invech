	function checkAndCreateUser($uid = '',$username = '',$mysqli){
	    if(empty($uid) || empty($username)){
	        echo "<script type='text/javascript'>alert('请登录!');window.location='/';</script>";
	        return true;
	    }
	    $sql = "select * from k_userlive where uid = '$uid' and platform = 'mg'";
	    $query = $mysqli->query($sql);
	    if($query){
	        $result = $query->fetch_array();
	    }
	    if(!$result){
	        $salt = mycrypt::generate_password(4);
	        $password = mycrypt::generate_password(8);
	        $code = mycrypt::encrypt($password, $salt);
	        $auth = mgGame::authenticate();
	        if($auth['success']){
	            $access_token = $auth['body']['access_token'];
	            $mgusername = $username.'@hag';
	            $info = mgGame::createMember($access_token, $mgusername, $password,$mgusername);
	            if($info['success']){
	                $sql ="insert into k_userlive (uid,username,code,salt,platform) values
	                ({$uid},'{$username}','{$code}','{$salt}','mg')";
	                $mysqli->query($sql);
	                return true;
	            }else{
	                return false;
	            }
	        }else{
	            return false;
	        }
	    }
	    return true;
	}
	
	public function lobby($type='ag'){
	    $dzyx = Cache::get('dzyx');
	    
	    if(!$dzyx){
	        $dzyx =[];	        
	        $dzyx['ag'] = db('dzyx')->where('platform','ag')->where('isopen',1)->where(function($query){
	            $query->where('ishot',1)->whereOr('isnew',1);
	        })->limit(40)->select();
	        $dzyx['mg'] = db('dzyx')->where('platform','mg')->where('isopen',1)->where(function($query){
	            $query->where('ishot',1)->whereOr('isnew',1);
	        })->limit(40)->select();
	        $dzyx['pt'] = db('dzyx')->where('platform','pt')->where('isopen',1)->where(function($query){
	            $query->where('ishot',1)->whereOr('isnew',1);
	        })->limit(40)->select();
	        $dzyx['bb'] = db('dzyx')->where('platform','bb')->where('isopen',1)->where(function($query){
	            $query->where('ishot',1)->whereOr('isnew',1);
	        })->limit(40)->select();	
	        $dzyx['sb'] = db('dzyx')->where('platform','sb')->where('isopen',1)->where(function($query){
	            $query->where('ishot',1)->whereOr('isnew',1);
	        })->limit(40)->select();	                
	        Cache::set('dzyx',$dzyx);
	    }

	    //$play_type = input('p');
        $this->assign('type',$type);
        $this->assign('dzyx',$dzyx);
	    
        return $this->fetch();	    
	}

	public function report(){
	    $type = input("type/s", "ag");
        $page_size = input("page_size/d", 20);
        $username = \session('username');
        if(!$username){
            echo "<script type='text/javascript'>alert('请先登录!');top.location.href='/';</script>";
            exit();
        }
        $collection = "ag_gameresult";
        $add_time = 'betTime';
	    switch ($type){
            case 'ag':
                $collection = "ag_gameresult";
                $add_time = 'betTime';
                break;
            case 'bbin':
                $add_time = "WagersDate";
                $collection = "bbin_gameresult";break;
        }
        $where['username'] = $username;
	    $start_time = input("start_time/s", date('Y-m-d'));
        $end_time = input("end_time/s", date('Y-m-d 23:59:59'));
        $where[$add_time] = ['between', [$start_time,$end_time]];
	    $list = db($collection, "mongo")->order($add_time,-1)->where($where)->paginate($page_size);
        echo db($collection, "mongo")->getLastSql()."<br>"; 
	    exit(json_encode($list->items()));
    }

    /**
     * pt 老用户 登陆游戏重置密码
     *
     * @param $mgusername
     * @param $password
     */

    static public function rePass($username,$mgusername,$uid){
        $data = [];
        $salt = mycrypt::generate_password(4);
        $password = mycrypt::generate_password(8);
        $code = mycrypt::encrypt($password, $salt);
        $userinfo = ptGamePlayer::info($mgusername);

//var_dump($uid);die;21988
        $data['password'] = $password;
        //第三方有数据,则更新密码
        if (!isset($userinfo['error'])){
            ptGamePlayer::update($mgusername,['password'=>$password]);
            if (\db('k_userlive')->where(['uid'=>$uid,'platform'=>'pt'])->select()){
                \db('k_userlive')->where(['uid'=>$uid,'platform'=>'pt'])->update(['code'=>$code,'salt'=>$salt]);
            }else{
                $sql = "insert into k_userlive (uid,username,code,salt,platform) 
                            values
                    ({$uid},'{$username}','{$code}','{$salt}','pt')";
                Db::execute($sql);
            }
            $data['mgusername'] = $mgusername;
        }else{
            $a = ptGamePlayer::create($mgusername,$password);
            if (isset($a['error'])){
                $data['mgusername'] = $username.'hga';
            }else{
                $data['mgusername'] = $mgusername;
            }
            if ($user = \db('k_userlive')->where(['uid'=>$uid,'platform'=>'pt'])->find()){
                ptGamePlayer::update($data['mgusername'],['password'=>$password]);
                \db('k_userlive')->where(['uid'=>$uid,'platform'=>'pt'])->update(['code'=>$code,'salt'=>$salt]);
            }else{
                $sql = "insert into k_userlive (uid,username,code,salt,platform) 
                            values
                    ({$uid},'{$username}','{$code}','{$salt}','pt')";
                Db::execute($sql);
            }
        }

        return $data;
    }
