<script type="text/javascript">
$(function(){
	alert(1);
	$("#sportpage").click(function(){
		window.location.href='/sport/home';
	});
	$("#livepage").click(function(){
		window.location.href='/live/index';
	});
	$("#lotterypage").click(function(){
		window.location.href='/lottery/home';
	});
	
	{if $tanchuang.show eq 1}
	//主页弹窗
	var popupWindowHeight = $(window).height();
	$(".game_popup").css({
		top : (popupWindowHeight - 518) / 2
	});
	$(".game_popup_c_t,.game_popup_c_b").click(function(){
		$(".game_popup").hide();
	});
	//判断用户是否第一次登陆，不是不弹窗.
	var gameCookie =  $.cookie("gamepopup_cookie");
	if (gameCookie == null) {
		//第一次访问
        $(".game_popup").show();
        $.cookie("gamepopup_cookie", "1",{expires:1});
    }else{
        //不是第一次访问
        $(".game_popup").hide();
    }	
	{/if}
	
	$('#qian_dao .qian_dao').click(function(){
		//window.open('qian_dao.php','qian_dao','menubar=no,status=yes,scrollbars=yes,top=150,left=400,toolbar=no,width=805,height=520');
		$.ajax({
			type: "post",
			url: '{:url('activity/qiandao')}',
			data:{'ajax':1},
			success:function(data) {
				alert(data);
			}
		});
	});

 	setInterval(function() {
		$.ajax({
			type: "post",
			url: "{:Url('index/home')}",
			data:{'ajax':1,'get_money':'1'},
			success:function(data) {
				if (/^[\d\.]+$/.test(data)) {
					$('#money').text(data);
				}
			}
		});
	},2000);

	/* 首页全屏大幻灯片       控制左右按钮显示 */
	$(".fullSlide").hover(function(){$(this).find(".prev,.next").stop(true,true).fadeTo("show",0.5)},function(){$(this).find(".prev,.next").fadeOut()});
	/* 调用SuperSlide */
	$(".fullSlide").slide({titCell:".hd ul", mainCell:".bd ul", effect:"fold",  autoPlay:true, autoPage:true, trigger:"click",
		startFun:function(i){
			var curLi = $(".fullSlide .bd li").eq(i); /* 当前大图的li */
			if(!!curLi.attr("_src")){
				curLi.css("background-image",curLi.attr("_src")).removeAttr("_src") /* 将_src地址赋予li背景，然后删除_src */
			}
		}
	});
}) 
</script>
