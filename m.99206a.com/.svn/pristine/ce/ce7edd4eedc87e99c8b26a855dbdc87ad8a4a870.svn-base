<script src="/scripts/iframe-menu.js"></script>	
<script type="text/javascript">
	function refresh_money(){
	$.ajax({
		cache: false,
		url: "/index/home.html",
		method:'post',
		data:{ajax:1,get_money:1},
		success:function(data){
			if(data==""){
			}else{
			$data_arr=data.split("||");
			 $("#user_money").html($data_arr[0]);
			  $("#user_jifen").html($data_arr[1]);
			}
		}
	}); 
	window.setTimeout("refresh_money();", 15000); 
	}
	refresh_money();
</script>
	<!--<script type="text/javascript" language="javascript" src="/js/left_mouse.js"></script>-->
<script type="text/javascript">$(window).load(function(){	changeFrameHeight()	})function changeFrameHeight(){    var bodyClientH = screen.height;   	var bodyClientW = screen.width; 	var iframeId = $(window.top.document).find("#iframeid")	iframeId.height(bodyClientH + 200)	iframeId.width(bodyClientW)	iframeId.show()}	</script>

