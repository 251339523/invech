<script type="text/javascript">
  Init('','','')

setInterval(function() {
	$.ajax({
		type: "post",
		url: "{:Url('index/home')}",
		data:{'ajax':1,'get_money':'1'},
		success:function(data) {
			if (/^[\d\.]+$/.test(data)) {
				$('#money,#money_2').text(data);
			}
		}
	});
},2000);
</script>
