        <form id="MyForm" action="/user/get_money" method="post" autocomplete="off">
        <div class="modify_main_label">
            <div class="block_10"></div>
            <ul>
                <li>
                    <i><img src="/css/img/tikuan_3.png"></i>
                    <span>会员账号</span>
                    <input type="text" class="modify_input" placeholder="会员账号" readonly="readonly" value="{$user['username']}">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_4.png"></i>
                    <span>真实姓名</span>
                    <input type="text" class="modify_input" name="pay_name" placeholder="真实姓名" value='{$user["pay_name"]}' readonly="readonly">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_6.png"></i>
                    <span>收款银行</span>
                    <input type="text" class="modify_input" placeholder="收款银行" name="pay_card" value='{$user["pay_card"]}' readonly="readonly">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_7.png"></i>
                    <span>银行账号</span>
                    <input type="text" class="modify_input" placeholder="银行账号" name="pay_num" value='{$user["pay_num"]}' readonly="readonly">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_8.png"></i>
                    <span>开户地址</span>
                    <input type="text" class="modify_input" placeholder="开户行地址" name="pay_address" value='{$user["pay_address"]}' readonly="readonly">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_9.png"></i>
                    <span>取款金额</span>
                    <input type="text" class="modify_input" placeholder="取款金额" name="pay_value" autocomplete="nope">
                </li>
                <li>
                    <i><img src="/css/img/tikuan_10.png"></i>
                    <span>资金密码</span>
                    <input type="password" class="modify_input" placeholder="资金密码" name="qk_pwd" autocomplete="new-password">
                </li>
            </ul>
            <div class="modify_main_li">
                 <input type="reset" class="del" value='取消'>
                    				<!--<a href="javascript:;" class="del">取消</a>-->
                <a href="javascript:document.getElementById('MyForm').submit();" class="sumbit">立即提款</a>
