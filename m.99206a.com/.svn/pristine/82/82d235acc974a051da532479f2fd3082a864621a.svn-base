
.modify_wp{
    width: 1179px;
    height: auto;
    margin: 30px auto;
}
.Lottery_type_wp{
    width: 1179px;
    padding: 5px;
    margin-top: 30px;
    background: #ffffff;
    overflow: hidden;
    clear: both;
}
.Lottery_type{
    clear: both;
    width: 65%;
    margin-top: 10px;
    float: left;
}
.Lottery_type li{
    float: left;
    margin-bottom: 10px;
}
.Lottery_type h4{
    float: left;
    text-align: center;
    line-height: 23px;
    color: #ffffff;
    background: #262522;
    border-radius: 30px;
    padding: 2px 16px;
    margin-left: 10px;
}
.Lottery_type a{
    display: inline-block;
    float: left;
    text-align: center;
    line-height: 23px;
    background: #f8f8f6;
    border-radius: 30px;
    padding: 2px 16px;
    margin-left: 10px;
    border: 1px solid #dbdbdb;
    color: #000000;
}
.Lottery_type a.add_background{
    background: #ff6c00;
    color: #ffffff;
}
.lottery_time_wp{
    width: 35%;
    float: right;
    color: #000000;
    height: 100%;
}
.lottery_time{
    margin-top: 8px;
}
.lottery_time span{
    display: block;
    float: left;
    height: 27px;
    line-height: 27px;
    margin-left: 5px;
    margin-right: 5px;
}
.lottery_time button{
    display: block;
    float: left;
    width: 68px;
    height: 27px;
    background: #ff6c00;
    color: #ffffff;
    text-align: center;
    line-height: 27px;
    outline: none;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    margin-left: 5px;
}
.lottery_time button:hover{
    background: #f23d08;
}
.start_time_input{
    width: 82px;
    height: 27px;
    border: 1px solid #a4a4a4;
    border-radius: 8px;
    text-align: center;
    display: block;
    float: left;
    outline: none;
    line-height: 27px;
}
